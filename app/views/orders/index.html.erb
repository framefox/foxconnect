<% content_for :title, "Orders - Framefox Connect" %>
<div class="space-y-8">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="space-y-2">
      <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
        Orders
      </h1>
      <p class="text-lg text-slate-600">
        Manage and track all orders from your connected stores.
      </p>
    </div>
    <div class="flex items-center space-x-2">
      <%= link_to new_import_order_path, 
          class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors inline-flex items-center space-x-2" do %>
        <span>Import Order</span>
      <% end %>
    </div>
  </div>
  <!-- Filters and Search -->
  <div class="bg-white border border-slate-200 rounded-lg  p-6">
    <%= form_with url: orders_path, method: :get, local: true, class: "space-y-4" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Search -->
        <div>
          <%= form.text_field :search, placeholder: "Search orders, customers...", 
                              value: params[:search],
                              class: "w-full px-3 py-2 border border-slate-300 rounded-md  focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent" %>
        </div>
        <!-- Store Filter -->
        <div>
          <%= form.select :store_id, 
                          options_from_collection_for_select(@stores, :id, :name, params[:store_id]),
                          { prompt: "All Stores" },
                          { class: "w-full px-3 py-2 border border-slate-300 rounded-md  focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent" } %>
        </div>
        <!-- Financial Status Filter -->
        <div>
          <%= form.select :financial_status,
                          options_for_select(@financial_statuses.map { |status| [status.humanize, status] }, params[:financial_status]),
                          { prompt: "All Payment Status" },
                          { class: "w-full px-3 py-2 border border-slate-300 rounded-md  focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent" } %>
        </div>
        <!-- Fulfillment Status Filter -->
        <div>
          <%= form.select :fulfillment_status,
                          options_for_select(@fulfillment_statuses.map { |status| [status.humanize, status] }, params[:fulfillment_status]),
                          { prompt: "All Fulfillment Status" },
                          { class: "w-full px-3 py-2 border border-slate-300 rounded-md  focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent" } %>
        </div>
      </div>
      <div class="flex justify-between items-center">
        <div class="flex space-x-2">
          <%= form.submit "Filter", class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
          <%= link_to "Clear", orders_path, class: "bg-slate-100 text-slate-700 hover:bg-slate-200 px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
        </div>
        <div class="text-sm text-slate-600">
          <%= pagy_info(@pagy) %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- Orders Table -->
  <% if @orders.any? %>
    <div class="bg-white border border-slate-200 rounded-lg  overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full divide-y divide-slate-200">
          <thead class="bg-slate-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
                Order
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
                Customer
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
                Store
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
                Payment
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
                Fulfillment
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
                Total
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
                Date
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-slate-200">
            <% @orders.each do |order| %>
              <tr class="hover:bg-slate-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div>
                      <div class="text-sm font-medium text-slate-900">
                        <%= order.display_name %>
                      </div>
                      <div class="text-sm text-slate-500">
                        <%= order.total_items %> items
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-slate-900">
                    <%= order.customer_name || "No name" %>
                  </div>
                  <div class="text-sm text-slate-500">
                    <%= order.customer_email %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-8 h-8 bg-slate-100 rounded-lg flex items-center justify-center mr-3">
                      <% if order.store.platform == "shopify" %>
                        <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M15.8 6.7c-.1-1-.5-1.8-1.2-2.4-.7-.6-1.6-.9-2.6-.9s-1.9.3-2.6.9c-.7.6-1.1 1.4-1.2 2.4-.1.8.1 1.6.5 2.3.4.7 1 1.2 1.7 1.5v.8c0 .6.4 1 1 1s1-.4 1-1v-.8c.7-.3 1.3-.8 1.7-1.5.4-.7.6-1.5.5-2.3z"/>
                        </svg>
                      <% else %>
                        <svg class="w-4 h-4 text-slate-600" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/>
                        </svg>
                      <% end %>
                    </div>
                    <div>
                      <div class="text-sm font-medium text-slate-900">
                        <%= order.store.name %>
                      </div>
                      <div class="text-sm text-slate-500">
                        <%= order.store.platform.humanize %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case order.financial_status %>
                  <% when "paid" %>
                    <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                      <i class="fa-solid fa-check w-3 h-3 mr-1"></i>
                      Paid
                    </span>
                  <% when "pending" %>
                    <span class="inline-flex items-center rounded-full bg-yellow-100 px-2.5 py-0.5 text-xs font-medium text-yellow-800">
                      <i class="fa-solid fa-clock w-3 h-3 mr-1"></i>
                      Pending
                    </span>
                  <% when "partially_paid" %>
                    <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">
                      <i class="fa-solid fa-circle-half-stroke w-3 h-3 mr-1"></i>
                      Partial
                    </span>
                  <% when "refunded" %>
                    <span class="inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800">
                      <i class="fa-solid fa-undo w-3 h-3 mr-1"></i>
                      Refunded
                    </span>
                  <% else %>
                    <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
                      <%= order.financial_status.humanize %>
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case order.fulfillment_status %>
                  <% when "fulfilled" %>
                    <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                      <i class="fa-solid fa-shipping-fast w-3 h-3 mr-1"></i>
                      Fulfilled
                    </span>
                  <% when "unfulfilled" %>
                    <span class="inline-flex items-center rounded-full bg-yellow-100 px-2.5 py-0.5 text-xs font-medium text-yellow-800">
                      <i class="fa-solid fa-clock w-3 h-3 mr-1"></i>
                      Unfulfilled
                    </span>
                  <% when "partial" %>
                    <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">
                      <i class="fa-solid fa-circle-half-stroke w-3 h-3 mr-1"></i>
                      Partial
                    </span>
                  <% when "cancelled" %>
                    <span class="inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800">
                      <i class="fa-solid fa-times w-3 h-3 mr-1"></i>
                      Cancelled
                    </span>
                  <% else %>
                    <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
                      <%= order.fulfillment_status.humanize %>
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">
                  <%= number_to_currency(order.total_price, unit: order.currency, precision: 2) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                  <%= order.created_at.strftime("%b %d, %Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex space-x-2">
                    <%= link_to order_path(order), 
                        class: "bg-slate-100 text-slate-700 hover:bg-slate-200 px-2 py-1 rounded text-xs font-medium transition-colors" do %>
                      View
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- Pagination -->
      <% if @pagy.pages > 1 %>
        <div class="px-6 py-4 bg-slate-50 border-t border-slate-200">
          <div class="flex items-center justify-between">
            <div class="text-sm text-slate-700">
              <%= pagy_info(@pagy) %>
            </div>
            <div class="flex space-x-1">
              <%== pagy_nav(@pagy, 
                    id: 'pagy-nav',
                    aria_label: 'Page navigation',
                    size: @pagy.vars[:size],
                    link_extra: 'class="px-3 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-md hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-500 transition-colors"',
                    page_extra: 'class="px-3 py-2 text-sm font-medium text-white bg-slate-900 border border-slate-900 rounded-md"'
              ) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="bg-white border border-slate-200 rounded-lg  p-12 text-center">
      <div class="w-16 h-16 bg-slate-100 rounded-lg flex items-center justify-center mx-auto mb-4">
        <i class="fa-solid fa-receipt text-2xl text-slate-600"></i>
      </div>
      <h3 class="text-lg font-semibold text-slate-900 mb-2">No orders found</h3>
      <% if params[:search].present? || params[:store_id].present? || params[:financial_status].present? || params[:fulfillment_status].present? %>
        <p class="text-sm text-slate-600 mb-6">
          Try adjusting your filters to see more results.
        </p>
        <%= link_to "Clear filters", orders_path, 
            class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors inline-flex items-center" %>
      <% else %>
        <p class="text-sm text-slate-600">
          Orders from your connected stores will appear here once they start coming in.
        </p>
      <% end %>
    </div>
  <% end %>
</div>
