<% content_for :title, "Order #{@order.display_name} - Framefox Connect" %>
<div class="space-y-8">
  <!-- Header with Back Button -->
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <%= link_to orders_path, class: "text-slate-600 hover:text-slate-900 transition-colors" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>
      <div>
        <div class="flex items-center space-x-3 mb-2">
          <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
            Order <%= @order.display_name %>
          </h1>
          <%= order_state_badge(@order) %>
        </div>
        <p class="text-lg text-slate-600">
          <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </p>
        <% if @order.shopify_remote_draft_order_id.present? || @order.shopify_remote_order_id.present? %>
          <div class="mt-2 flex items-center space-x-2">
            <% if @order.shopify_remote_draft_order_id.present? %>
              <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">
                <i class="fa-brands fa-shopify w-3 h-3 mr-1.5"></i>
                Draft #<%= @order.shopify_remote_draft_order_id %>
              </span>
            <% end %>
            <% if @order.shopify_remote_order_id.present? %>
              <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                <i class="fa-brands fa-shopify w-3 h-3 mr-1.5"></i>
                Order <%= @order.shopify_remote_order_name.present? ? @order.shopify_remote_order_name : "##{@order.shopify_remote_order_id}" %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Actions Dropdown -->
    <div class="relative" data-dropdown>
      <button 
        type="button"
        data-dropdown-trigger
        class="inline-flex items-center px-4 py-2 border border-slate-300 rounded-md bg-white text-sm font-medium text-slate-700 hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500 transition-colors"
      >
        <span>Actions</span>
        <i class="fa-solid fa-chevron-down ml-2 h-4 w-4"></i>
      </button>
      <!-- Dropdown Menu -->
      <div 
        data-dropdown-menu
        class="hidden absolute right-0 z-10 mt-2 w-64 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none"
      >
        <div class="py-1" role="none">
          <!-- State Transitions -->
          <% if @order.may_submit? %>
            <%= link_to send(submit_order_path, @order),
                data: { turbo_method: :patch },
                class: "group flex items-center px-4 py-2 text-sm text-slate-700 hover:bg-slate-100 hover:text-slate-900 transition-colors",
                role: "menuitem" do %>
              <i class="fa-solid fa-paper-plane mr-3 h-4 w-4 text-slate-400 group-hover:text-slate-500"></i>
              Submit for Production
            <% end %>
          <% end %>
          <% if @order.may_start_production? %>
            <%= link_to start_production_order_path(@order),
                data: { turbo_method: :patch },
                class: "group flex items-center px-4 py-2 text-sm text-slate-700 hover:bg-slate-100 hover:text-slate-900 transition-colors",
                role: "menuitem" do %>
              <i class="fa-solid fa-play mr-3 h-4 w-4 text-slate-400 group-hover:text-slate-500"></i>
              Start Production
            <% end %>
          <% end %>
          <% if @order.may_cancel? %>
            <%= link_to cancel_order_order_path(@order),
                data: { turbo_method: :patch, turbo_confirm: "Are you sure you want to cancel this order?" },
                class: "group flex items-center px-4 py-2 text-sm text-red-700 hover:bg-red-50 hover:text-red-900 transition-colors",
                role: "menuitem" do %>
              <i class="fa-solid fa-times-circle mr-3 h-4 w-4 text-red-400 group-hover:text-red-500"></i>
              Cancel Order
            <% end %>
          <% end %>
          <% if @order.may_reopen? %>
            <%= link_to reopen_order_path(@order),
                data: { turbo_method: :patch },
                class: "group flex items-center px-4 py-2 text-sm text-slate-700 hover:bg-slate-100 hover:text-slate-900 transition-colors",
                role: "menuitem" do %>
              <i class="fa-solid fa-redo mr-3 h-4 w-4 text-slate-400 group-hover:text-slate-500"></i>
              Reopen Order
            <% end %>
          <% end %>
          <!-- Separator if we have state actions and platform URL -->
          <% if (@order.may_submit? || @order.may_start_production? || @order.may_cancel? || @order.may_reopen?) && @order.platform_url %>
            <div class="border-t border-slate-200 my-1"></div>
          <% end %>
          <!-- Platform Link -->
          <% if @order.platform_url %>
            <%= link_to @order.platform_url, 
                target: "_blank", 
                rel: "noopener",
                class: "group flex items-center px-4 py-2 text-sm text-slate-700 hover:bg-slate-100 hover:text-slate-900 transition-colors",
                role: "menuitem" do %>
              <i class="fa-solid fa-external-link mr-3 h-4 w-4 text-slate-400 group-hover:text-slate-500"></i>
              View in <%= @order.store.platform.humanize %>
            <% end %>
          <% end %>
          <!-- Resync from Platform -->
          <%= link_to resync_order_path(@order),
              data: { turbo_method: :patch, turbo_confirm: "This will update the order with the latest data from #{@order.store.platform.humanize}. Continue?" },
              class: "group flex items-center px-4 py-2 text-sm text-slate-700 hover:bg-slate-100 hover:text-slate-900 transition-colors",
              role: "menuitem" do %>
            <i class="fa-solid fa-sync mr-3 h-4 w-4 text-slate-400 group-hover:text-slate-500"></i>
            Resync from <%= @order.store.platform.humanize %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2 space-y-8">
      <!-- Order Status Card -->
      <div class="bg-white border border-slate-200 rounded-lg p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Status -->
          <div class="flex items-center space-x-4">
            <% case @order.aasm_state %>
            <% when 'draft' %>
              <div class="w-12 h-12 bg-slate-100 rounded-full flex items-center justify-center flex-shrink-0">
                <i class="fa-solid fa-edit text-slate-600"></i>
              </div>
            <% when 'awaiting_production' %>
              <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center flex-shrink-0">
                <i class="fa-solid fa-clock text-yellow-600"></i>
              </div>
            <% when 'in_production' %>
              <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                <i class="fa-solid fa-cog text-blue-600"></i>
              </div>
            <% when 'cancelled' %>
              <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center flex-shrink-0">
                <i class="fa-solid fa-times text-red-600"></i>
              </div>
            <% else %>
              <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                <i class="fa-solid fa-box text-green-600"></i>
              </div>
            <% end %>
            <div>
              <p class="text-sm font-medium text-slate-600">Status</p>
              <p class="text-lg font-semibold text-slate-900">
                <% case @order.aasm_state %>
                <% when 'draft' %>
                  Draft
                <% when 'awaiting_production' %>
                  Awaiting Production
                <% when 'in_production' %>
                  In Production
                <% when 'cancelled' %>
                  Cancelled
                <% else %>
                  In transit
                <% end %>
              </p>
            </div>
          </div>
          <!-- Estimated Delivery Date -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
              <i class="fa-solid fa-calendar text-blue-600"></i>
            </div>
            <div>
              <p class="text-sm font-medium text-slate-600">Est. Dispatch date</p>
              <p class="text-lg font-semibold text-slate-900">
                7 business days
              </p>
            </div>
          </div>
          <!-- Last Updated -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
              <i class="fa-solid fa-clock text-purple-600"></i>
            </div>
            <div>
              <p class="text-sm font-medium text-slate-600">Last updated</p>
              <p class="text-lg font-semibold text-slate-900">
                <%= @order.updated_at.strftime("%b %d, %Y") %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="lg:col-span-1 space-y-8">
      <div class="bg-white border border-slate-200 rounded-lg p-6">
        <div class="space-y-3">
          <div class="">
            <%= link_to send(submit_order_path, @order),
                data: { turbo_method: :patch },
                class: "block text-center w-full bg-slate-900 hover:bg-slate-700 text-white font-medium py-3 px-4 rounded-lg transition-colors" do %>
              Submit for Production
              <i class="fa-solid fa-arrow-right ml-2 h-4 w-4"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Order Details -->
    <div class="lg:col-span-2 space-y-8">
      <% 
        fulfillable_items = @order_items.select(&:fulfillable?)
        non_fulfillable_items = @order_items.select(&:non_fulfillable?)
        items_without_mapping = fulfillable_items.reject(&:has_variant_mapping?)
      %>
      <!-- Fulfillable Items Card -->
      <% if fulfillable_items.any? %>
        <div class="bg-white border border-slate-200 rounded-lg">
          <% if items_without_mapping.any? %>
            <div class="px-6 py-4 bg-yellow-50 border-b border-yellow-200 rounded-t-lg">
              <div class="flex items-center justify-between">
                <h3 class="text-lg font-semibold text-yellow-900"><%= pluralize(items_without_mapping.sum(&:quantity), 'item') %> <%= items_without_mapping.sum(&:quantity) == 1 ? 'has' : 'have' %> no connected product and image</h3>
                <span class="inline-flex items-center rounded-full px-2 py-0.5 text-sm font-medium text-yellow-800">
                  <i class="fa-solid fa-exclamation-triangle w-3 h-3 mr-2"></i>
                  Action needed
                </span>
              </div>
            </div>
          <% else %>
            <div class="px-6 py-4 bg-green-50 border-b border-green-200 rounded-t-lg">
              <div class="flex items-center justify-between">
                <h3 class="text-lg font-semibold text-green-900">To be fulfilled by Framefox</h3>
                <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">
                  <%= fulfillable_items.sum(&:quantity) %> items
                </span>
              </div>
            </div>
          <% end %>
          <div class="divide-y divide-slate-200">
            <% fulfillable_items.each do |item| %>
              <div data-react-component="OrderItemCard"
                   data-react-props='<%= {
                     item: {
                       id: item.id,
                       order_id: item.order_id,
                       display_name: item.display_name,
                       sku: item.sku,
                       quantity: item.quantity,
                       price: item.price.to_f,
                       product_variant_id: item.product_variant_id,
                       variant_mapping: item.variant_mapping ? {
                         id: item.variant_mapping.id,
                         framed_preview_thumbnail: item.variant_mapping.framed_preview_thumbnail,
                         frame_sku_cost_formatted: item.variant_mapping.frame_sku_cost_formatted,
                         frame_sku_title: item.variant_mapping.frame_sku_title,
                         frame_sku_code: item.variant_mapping.frame_sku_code,
                         frame_sku_long: item.variant_mapping.frame_sku_long,
                         frame_sku_short: item.variant_mapping.frame_sku_short,
                         frame_sku_unit: item.variant_mapping.frame_sku_unit,
                         image_filename: item.variant_mapping.image_filename,
                         ch: item.variant_mapping.ch,
                         cw: item.variant_mapping.cw
                       } : nil
                     },
                     currency: @order.currency,
                     showRestoreButton: false
                   }.to_json %>'>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <!-- Non-fulfillable Items Card -->
      <% if non_fulfillable_items.any? %>
        <div class="bg-white border border-slate-200 rounded-lg">
          <div class="px-6 py-4 bg-slate-50 border-b border-slate-200 rounded-t-lg">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-slate-900">Not Fulfilled by Framefox</h3>
              <span class="inline-flex items-center rounded-full bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-600">
                <%= non_fulfillable_items.sum(&:quantity) %> items
              </span>
            </div>
          </div>
          <div class="divide-y divide-slate-200">
            <% non_fulfillable_items.each do |item| %>
              <div class="p-6 group">
                <div class="flex items-start space-x-4">
                  <!-- Product Image -->
                  <div class="w-16 h-16 bg-slate-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <% if item.artwork_preview_url %>
                      <img src="<%= item.artwork_preview_url(size: 64) %>" 
                         alt="<%= item.display_name %>"
                         class="w-16 h-16 object-cover rounded-lg">
                    <% else %>
                      <i class="fa-solid fa-image text-slate-400"></i>
                    <% end %>
                  </div>
                  <!-- Product Details -->
                  <div class="flex-1 min-w-0">
                    <div class="flex items-start justify-between">
                      <div class="flex-1">
                        <h4 class="text-sm font-medium text-slate-900">
                          <%= item.display_name %>
                        </h4>
                        <% if item.sku.present? %>
                          <p class="text-sm text-slate-500 mt-1">SKU: <%= item.sku %></p>
                        <% end %>
                        <div class="flex items-center space-x-4 mt-2">
                          <span class="text-sm text-slate-600">
                            Qty: <%= item.quantity %>
                          </span>
                          <span class="text-sm text-slate-600">
                            <%= number_to_currency(item.price, unit: @order.currency, precision: 2) %> each
                          </span>
                          <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-600">
                            <i class="fa-solid fa-times w-3 h-3 mr-1"></i>
                            Not fulfillable
                          </span>
                        </div>
                      </div>
                      <div class="text-right">
                        <% if item.product_variant.present? %>
                          <%= button_to "Enable Fulfilment", 
                              set_fulfilment_connections_store_product_variant_path(item.store, item.product_variant, active: true),
                              method: :patch,
                              form: { data: { turbo: false }, class: "opacity-0 group-hover:opacity-100 transition-opacity" },
                              class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-slate-700 bg-slate-100 hover:bg-slate-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500 transition-colors" %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <!-- Removed Items Card -->
      <% if @removed_items.any? %>
        <div class="bg-white border border-slate-200 rounded-lg">
          <div class="px-6 py-4 bg-slate-50 border-b border-slate-200 rounded-t-lg">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-slate-900">Removed Items <span class="text-sm text-slate-600 mt-1">These items won't be fulfilled</span></h3>
              <span class="inline-flex items-center rounded-full bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-600">
                <%= @removed_items.sum(&:quantity) %> items
              </span>
            </div>
          </div>
          <div class="divide-y divide-slate-200">
            <% @removed_items.each do |item| %>
              <div class="opacity-70 bg-slate-50" 
                   data-react-component="OrderItemCard"
                   data-react-props='<%= {
                     item: {
                       id: item.id,
                       order_id: item.order_id,
                       display_name: item.display_name,
                       sku: item.sku,
                       quantity: item.quantity,
                       price: item.price.to_f,
                       product_variant_id: item.product_variant_id,
                       variant_mapping: item.variant_mapping ? {
                         id: item.variant_mapping.id,
                         framed_preview_thumbnail: item.variant_mapping.framed_preview_thumbnail,
                         frame_sku_cost_formatted: item.variant_mapping.frame_sku_cost_formatted,
                         frame_sku_title: item.variant_mapping.frame_sku_title,
                         frame_sku_code: item.variant_mapping.frame_sku_code,
                         ch: item.variant_mapping.ch,
                         cw: item.variant_mapping.cw
                       } : nil
                     },
                     currency: @order.currency,
                     showRestoreButton: true
                   }.to_json %>'>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <!-- Order Notes -->
      <% if @order.note.present? %>
        <div class="bg-white border border-slate-200 rounded-lg  p-6">
          <h3 class="text-lg font-semibold text-slate-900 mb-3">Order Notes</h3>
          <div class="bg-slate-50 rounded-lg p-4">
            <p class="text-sm text-slate-700 whitespace-pre-wrap"><%= @order.note %></p>
          </div>
        </div>
      <% end %>
    </div>
    <!-- Order Summary Sidebar -->
    <div class="space-y-6">
      <!-- Customer Information -->
      <div class="bg-white border border-slate-200 rounded-lg  p-6">
        <h3 class="text-lg font-semibold text-slate-900 mb-4">Customer Information</h3>
        <div class="space-y-3">
          <div>
            <div class="text-sm font-medium text-slate-900">
              <%= @order.customer_name || "No name provided" %>
            </div>
            <% if @order.customer_email %>
              <div class="text-sm text-slate-600">
                <%= mail_to @order.customer_email, @order.customer_email, class: "hover:text-slate-900" %>
              </div>
            <% end %>
            <% if @order.customer_phone %>
              <div class="text-sm text-slate-600">
                <%= @order.customer_phone %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- Shipping Address -->
      <% if @order.shipping_address %>
        <div class="bg-white border border-slate-200 rounded-lg  p-6">
          <h3 class="text-lg font-semibold text-slate-900 mb-4">Shipping Address</h3>
          <div class="text-sm text-slate-700 space-y-1">
            <% @order.shipping_address.shipping_label_format.each do |line| %>
              <div><%= line %></div>
            <% end %>
          </div>
          <% if @order.shipping_address.international? %>
            <div class="mt-3">
              <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">
                <i class="fa-solid fa-globe w-3 h-3 mr-1"></i>
                International
              </span>
            </div>
          <% end %>
        </div>
      <% end %>
      <!-- Tags -->
      <% if @order.tags.present? && @order.tags.any? %>
        <div class="bg-white border border-slate-200 rounded-lg  p-6">
          <h3 class="text-lg font-semibold text-slate-900 mb-4">Tags</h3>
          <div class="flex flex-wrap gap-2">
            <% @order.tags.each do |tag| %>
              <span class="inline-flex items-center rounded-full bg-slate-100 px-2.5 py-0.5 text-xs font-medium text-slate-800">
                <%= tag %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
      <!-- Activity Feed -->
      <div class="bg-white border border-slate-200 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-slate-900 mb-4">Activity Feed</h3>
        <div class="space-y-4">
          <% @order.recent_activities(15).each do |activity| %>
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 mt-1">
                <i class="<%= activity.icon_class %> w-4 h-4"></i>
              </div>
              <div class="flex-1 min-w-0">
                <div class="text-sm font-medium text-slate-900">
                  <%= activity.title %>
                </div>
                <% if activity.description.present? %>
                  <div class="text-sm text-slate-600 mt-1">
                    <%= activity.description %>
                  </div>
                <% end %>
                <div class="text-xs text-slate-500 mt-1">
                  <%= activity.time_ago %>
                  <% if activity.has_actor? %>
                    <span class="mx-1">â€¢</span>
                    <span class="text-slate-400">by <%= activity.actor_type.humanize %></span>
                  <% end %>
                </div>
                <% if activity.metadata.present? && activity.metadata.any? %>
                  <div class="mt-2">
                    <% activity.metadata.each do |key, value| %>
                      <% if value.present? && !%w[from_state to_state].include?(key.to_s) %>
                        <span class="inline-flex items-center rounded-full bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-700 mr-1">
                          <%= key.humanize %>: <%= value %>
                        </span>
                      <% end %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <% if @order.order_activities.count == 0 %>
            <div class="text-center py-8">
              <i class="fa-solid fa-clock text-slate-300 text-2xl mb-2"></i>
              <p class="text-sm text-slate-500">No activities yet</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
