<% content_for :title, "Order #{@order.display_name} - Framefox Connect" %>
<div class="space-y-8">
  <!-- Header with Back Button -->
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <%= link_to orders_path, class: "text-slate-600 hover:text-slate-900 transition-colors" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>
      <div>
        <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
          Order <%= @order.display_name %>
        </h1>
        <p class="text-lg text-slate-600">
          <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </p>
      </div>
    </div>
    <div class="flex items-center space-x-2">
      <% if @order.platform_url %>
        <%= link_to @order.platform_url, target: "_blank",
            class: "bg-slate-100 text-slate-700 hover:bg-slate-200 px-4 py-2 rounded-md text-sm font-medium transition-colors inline-flex items-center space-x-2" do %>
          <i class="fa-solid fa-external-link"></i>
          <span>View in <%= @order.store.platform.humanize %></span>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Order Details -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Order Items -->
      <div class="bg-white border border-slate-200 rounded-lg shadow-sm">
        <div class="px-6 py-4 border-b border-slate-200">
          <h3 class="text-lg font-semibold text-slate-900">Order Items</h3>
        </div>
        <div class="divide-y divide-slate-200">
          <% 
            fulfillable_items = @order_items.select(&:has_variant_mapping?)
            non_fulfillable_items = @order_items.reject(&:has_variant_mapping?)
          %>
          <!-- Section for fulfillable items -->
          <% if fulfillable_items.any? %>
            <div class="px-6 py-4 bg-green-50 border-b border-green-200">
              <div class="flex items-center justify-between">
                <h4 class="text-sm font-semibold text-green-900">To be fulfilled by Framefox</h4>
                <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">
                  <%= fulfillable_items.sum(&:quantity) %> items
                </span>
              </div>
            </div>
            <% fulfillable_items.each do |item| %>
              <div class="p-6">
                <div class="flex items-start space-x-4">
                  <!-- Product Image -->
                  <div class="w-16 h-16 bg-slate-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <% if item.artwork_preview_url %>
                      <img src="<%= item.artwork_preview_url(size: 64) %>" 
                         alt="<%= item.display_name %>"
                         class="w-16 h-16 object-cover rounded-lg">
                    <% else %>
                      <i class="fa-solid fa-image text-slate-400"></i>
                    <% end %>
                  </div>
                  <!-- Product Details -->
                  <div class="flex-1 min-w-0">
                    <div class="flex items-start justify-between">
                      <div class="flex-1">
                        <h4 class="text-sm font-medium text-slate-900">
                          <%= item.display_name %>
                        </h4>
                        <% if item.sku.present? %>
                          <p class="text-sm text-slate-500 mt-1">SKU: <%= item.sku %></p>
                        <% end %>
                        <div class="flex items-center space-x-4 mt-2">
                          <span class="text-sm text-slate-600">
                            Qty: <%= item.quantity %>
                          </span>
                          <span class="text-sm text-slate-600">
                            <%= number_to_currency(item.price, unit: @order.currency, precision: 2) %> each
                          </span>
                          <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">
                            <i class="fa-solid fa-check w-3 h-3 mr-1"></i>
                            Ready to fulfill
                          </span>
                        </div>
                      </div>
                      <div class="text-right">
                        <div class="text-sm font-medium text-slate-900">
                          <%= number_to_currency(item.total, unit: @order.currency, precision: 2) %>
                        </div>
                        <% if item.tax_amount > 0 %>
                          <div class="text-sm text-slate-500">
                            +<%= number_to_currency(item.tax_amount, unit: @order.currency, precision: 2) %> tax
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
          <!-- Section for non-fulfillable items -->
          <% if non_fulfillable_items.any? %>
            <div class="px-6 py-4 bg-yellow-50 border-b border-yellow-200">
              <div class="flex items-center justify-between">
                <h4 class="text-sm font-semibold text-yellow-900">Not fulfilled by Framefox</h4>
                <span class="inline-flex items-center rounded-full bg-yellow-100 px-2 py-0.5 text-xs font-medium text-yellow-800">
                  <%= non_fulfillable_items.sum(&:quantity) %> items
                </span>
              </div>
            </div>
            <% non_fulfillable_items.each do |item| %>
              <div class="p-6">
                <div class="flex items-start space-x-4">
                  <!-- Product Image -->
                  <div class="w-16 h-16 bg-slate-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <% if item.artwork_preview_url %>
                      <img src="<%= item.artwork_preview_url(size: 64) %>" 
                         alt="<%= item.display_name %>"
                         class="w-16 h-16 object-cover rounded-lg">
                    <% else %>
                      <i class="fa-solid fa-image text-slate-400"></i>
                    <% end %>
                  </div>
                  <!-- Product Details -->
                  <div class="flex-1 min-w-0">
                    <div class="flex items-start justify-between">
                      <div class="flex-1">
                        <h4 class="text-sm font-medium text-slate-900">
                          <%= item.display_name %>
                        </h4>
                        <% if item.sku.present? %>
                          <p class="text-sm text-slate-500 mt-1">SKU: <%= item.sku %></p>
                        <% end %>
                        <div class="flex items-center space-x-4 mt-2">
                          <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-400">
                            Not mapped to a Framefox product
                          </span>
                        </div>
                      </div>
                      <div class="text-right">
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <!-- Order Notes -->
      <% if @order.note.present? %>
        <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6">
          <h3 class="text-lg font-semibold text-slate-900 mb-3">Order Notes</h3>
          <div class="bg-slate-50 rounded-lg p-4">
            <p class="text-sm text-slate-700 whitespace-pre-wrap"><%= @order.note %></p>
          </div>
        </div>
      <% end %>
    </div>
    <!-- Order Summary Sidebar -->
    <div class="space-y-6">
      <!-- Customer Information -->
      <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6">
        <h3 class="text-lg font-semibold text-slate-900 mb-4">Customer Information</h3>
        <div class="space-y-3">
          <div>
            <div class="text-sm font-medium text-slate-900">
              <%= @order.customer_name || "No name provided" %>
            </div>
            <% if @order.customer_email %>
              <div class="text-sm text-slate-600">
                <%= mail_to @order.customer_email, @order.customer_email, class: "hover:text-slate-900" %>
              </div>
            <% end %>
            <% if @order.customer_phone %>
              <div class="text-sm text-slate-600">
                <%= @order.customer_phone %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- Shipping Address -->
      <% if @order.shipping_address %>
        <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6">
          <h3 class="text-lg font-semibold text-slate-900 mb-4">Shipping Address</h3>
          <div class="text-sm text-slate-700 space-y-1">
            <% @order.shipping_address.shipping_label_format.each do |line| %>
              <div><%= line %></div>
            <% end %>
          </div>
          <% if @order.shipping_address.international? %>
            <div class="mt-3">
              <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">
                <i class="fa-solid fa-globe w-3 h-3 mr-1"></i>
                International
              </span>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Tags -->
      <% if @order.tags.present? && @order.tags.any? %>
        <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6">
          <h3 class="text-lg font-semibold text-slate-900 mb-4">Tags</h3>
          <div class="flex flex-wrap gap-2">
            <% @order.tags.each do |tag| %>
              <span class="inline-flex items-center rounded-full bg-slate-100 px-2.5 py-0.5 text-xs font-medium text-slate-800">
                <%= tag %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
      <!-- Order Timeline -->
      <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6">
        <h3 class="text-lg font-semibold text-slate-900 mb-4">Order Timeline</h3>
        <div class="space-y-3">
          <div class="flex items-start space-x-3">
            <div class="w-2 h-2 bg-slate-300 rounded-full mt-2"></div>
            <div>
              <div class="text-sm font-medium text-slate-900">Order Created</div>
              <div class="text-xs text-slate-500">
                <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </div>
            </div>
          </div>
          <% if @order.processed_at %>
            <div class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
              <div>
                <div class="text-sm font-medium text-slate-900">Order Processed</div>
                <div class="text-xs text-slate-500">
                  <%= @order.processed_at.strftime("%B %d, %Y at %I:%M %p") %>
                </div>
              </div>
            </div>
          <% end %>
          <% if @order.cancelled_at %>
            <div class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-red-500 rounded-full mt-2"></div>
              <div>
                <div class="text-sm font-medium text-slate-900">Order Cancelled</div>
                <div class="text-xs text-slate-500">
                  <%= @order.cancelled_at.strftime("%B %d, %Y at %I:%M %p") %>
                </div>
                <% if @order.cancel_reason %>
                  <div class="text-xs text-slate-600 mt-1">
                    Reason: <%= @order.cancel_reason.humanize %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
          <% if @order.closed_at %>
            <div class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-slate-500 rounded-full mt-2"></div>
              <div>
                <div class="text-sm font-medium text-slate-900">Order Closed</div>
                <div class="text-xs text-slate-500">
                  <%= @order.closed_at.strftime("%B %d, %Y at %I:%M %p") %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
