<% if store.needs_reauthentication? %>
  <% is_admin = controller.class.name.start_with?('Admin::') %>
  <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <svg class="w-5 h-5 text-red-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
        </svg>
      </div>
      <div class="ml-3 flex-1">
        <h3 class="text-sm font-medium text-red-800">
          Reconnection Required
        </h3>
        <div class="mt-2 text-sm text-red-700">
          <p>
            <% if is_admin %>
              This store's <%= store.platform.titleize %> connection has expired or been revoked. 
              The store owner (<%= store.user&.email || 'unknown' %>) must reconnect their store to resume syncing products and processing orders.
            <% else %>
              Your <%= store.platform.titleize %> store connection has expired or been revoked. 
              To resume syncing products and processing orders, please reconnect your store.
            <% end %>
          </p>
        </div>
        <% unless is_admin %>
          <div class="mt-4">
            <%= link_to reconnect_store_path(store), 
                class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-red-800 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              Reconnect <%= store.platform.titleize %> Store
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

