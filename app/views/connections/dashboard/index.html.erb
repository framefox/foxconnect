<% content_for :title, "Connections - Framefox Connect" %>
<div class="space-y-8">
  <!-- Page Header -->
  <div class="space-y-2">
    <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
      Store Connections
    </h1>
    <p class="text-lg text-slate-600">
      Connect your e-commerce platforms to start drop-shipping with Framefox Connect.
    </p>
  </div>
  <!-- Connected Stores -->
  <% if @connected_stores.any? %>
    <div class="space-y-6">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-slate-900">Connected Stores</h2>
      </div>
      <div class="bg-white border border-slate-200 rounded-lg  divide-y divide-slate-200">
        <% @connected_stores.limit(3).each do |store| %>
          <div class="p-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-8">
                <%= image_tag "shopify.png", alt: "Shopify", class: "max-w-18" %>
                <div>
                  <h3 class="font-semibold text-slate-900"><%= store.name %></h3>
                  <p class="text-sm text-slate-600"><%= store.shopify_domain %></p>
                  <% if store.active? %>
                    <p class="inline-flex items-center rounded-lg bg-green-100 px-3 py-1.5 mt-3 text-sm font-medium text-green-900">
                      <% fulfillment_variants = store.product_variants.where(fulfilment_active: true) %>
                      <% fulfillment_count = fulfillment_variants.count %>
                      <% product_count = fulfillment_variants.distinct.count(:product_id) %>
                      <%= svg_icon('OrderFulfilledIcon', class: 'w-5 h-5 mr-1') %>
                      Fulfilling <%= fulfillment_count %> <%= 'variant'.pluralize(fulfillment_count) %> across <%= product_count %> <%= 'product'.pluralize(product_count) %>
                    </p>
                  <% else %>
                    <p class="inline-flex items-center rounded-lg bg-yellow-100 px-3 py-1.5 mt-3 text-sm font-medium text-yellow-900">
                      <%= svg_icon('DisabledIcon', class: 'w-5 h-5 mr-1') %>
                      This store is currently deactivated.
                    </p>
                  <% end %>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <%= link_to connections_store_path(store), class: "bg-slate-100 text-slate-700 hover:bg-slate-200 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
                  Manage
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  <!-- Available Platforms -->
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-semibold text-slate-900">Available Platforms</h2>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Shopify -->
      <div class="bg-white border border-slate-200 rounded-lg p-6 hover:shadow-md transition-shadow">
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <div>
                <%= image_tag "shopify.png", alt: "Shopify", class: "max-w-32" %>
              </div>
            </div>
            <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
              Available
            </span>
          </div>
          <% if @connected_stores.any? %>
            <p class="text-sm text-green-600"><%= @connected_stores.count %> connected</p>
          <% else %>
            <p class="text-sm text-slate-500">Not connected</p>
          <% end %>
          <p class="text-sm text-slate-600">Connect your Shopify store to sync products, orders, and tracking information.</p>
          <div class="flex space-x-2">
            <div 
              data-react-component="ShopifyConnectButton" 
              data-react-props='{"connectUrl":"<%= connections_shopify_connect_path %>","buttonText":"Connect Shopify","buttonClass":"bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors flex-1 text-center w-full"}'
              class="flex-1"
            ></div>
          </div>
        </div>
      </div>
      <!-- Squarespace -->
      <div class="bg-white border border-slate-200 rounded-lg p-6 hover:shadow-md transition-shadow">
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <div>
                <%= image_tag "squarespace.svg", alt: "Squarespace", class: "max-w-48" %>
              </div>
            </div>
            <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
              Coming Soon
            </span>
          </div>
          <p class="text-sm text-slate-600">Connect your Squarespace store to manage your drop-shipping orders seamlessly.</p>
          <div class="flex space-x-2">
            <button disabled class="bg-gray-100 text-gray-400 px-4 py-2 rounded-md text-sm font-medium cursor-not-allowed flex-1">
              Coming Soon
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
