<% content_for :title, "Connections - Framefox Connect" %>
<div class="space-y-8">
  <!-- Page Header -->
  <div class="space-y-2">
    <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
      Store Connections
    </h1>
    <p class="text-lg text-slate-600">
      Connect your e-commerce platforms to start drop-shipping with Framefox Connect.
    </p>
  </div>
  <!-- Available Platforms -->
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-semibold text-slate-900">Available Platforms</h2>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @platforms.each do |platform| %>
        <div class="bg-white border border-slate-200 rounded-lg  p-6 hover:shadow-md transition-shadow">
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-slate-100 rounded-lg flex items-center justify-center">
                  <% if platform[:slug] == "shopify" %>
                    <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M15.8 6.7c-.1-1-.5-1.8-1.2-2.4-.7-.6-1.6-.9-2.6-.9s-1.9.3-2.6.9c-.7.6-1.1 1.4-1.2 2.4-.1.8.1 1.6.5 2.3.4.7 1 1.2 1.7 1.5v.8c0 .6.4 1 1 1s1-.4 1-1v-.8c.7-.3 1.3-.8 1.7-1.5.4-.7.6-1.5.5-2.3z"/>
                    </svg>
                  <% elsif platform[:slug] == "woocommerce" %>
                    <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/>
                    </svg>
                  <% else %>
                    <svg class="w-6 h-6 text-orange-600" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/>
                    </svg>
                  <% end %>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900"><%= platform[:name] %></h3>
                  <% if platform[:connected] > 0 %>
                    <p class="text-sm text-green-600"><%= platform[:connected] %> connected</p>
                  <% else %>
                    <p class="text-sm text-slate-500">Not connected</p>
                  <% end %>
                </div>
              </div>
              <% if platform[:available] %>
                <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                  Available
                </span>
              <% else %>
                <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
                  Coming Soon
                </span>
              <% end %>
            </div>
            <p class="text-sm text-slate-600"><%= platform[:description] %></p>
            <div class="flex space-x-2">
              <% if platform[:available] %>
                <% if platform[:slug] == "shopify" %>
                  <%= link_to connections_shopify_connect_path, class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors flex-1 text-center" do %>
                    Connect Shopify
                  <% end %>
                <% end %>
                <% if platform[:connected] > 0 %>
                  <span class="bg-green-100 text-green-800 px-4 py-2 rounded-md text-sm font-medium">
                    <%= platform[:connected] %> Connected
                  </span>
                <% end %>
              <% else %>
                <button disabled class="bg-gray-100 text-gray-400 px-4 py-2 rounded-md text-sm font-medium cursor-not-allowed flex-1">
                  Coming Soon
                </button>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <!-- Connected Stores -->
  <% if @connected_stores.any? %>
    <div class="space-y-6">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-slate-900">Connected Stores</h2>
      </div>
      <div class="bg-white border border-slate-200 rounded-lg  divide-y divide-slate-200">
        <% @connected_stores.limit(3).each do |store| %>
          <div class="p-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900"><%= store.name %></h3>
                  <p class="text-sm text-slate-600"><%= store.shopify_domain %></p>
                  <p class="text-xs text-slate-500">
                    Connected <%= store.created_at.strftime("%B %d, %Y") %>
                  </p>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                  Active
                </span>
                <%= link_to connections_store_path(store), class: "bg-slate-100 text-slate-700 hover:bg-slate-200 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
                  Manage
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="bg-white border border-slate-200 rounded-lg  p-12 text-center">
      <div class="w-16 h-16 bg-slate-100 rounded-lg flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-slate-900 mb-2">No stores connected yet</h3>
      <p class="text-sm text-slate-600 mb-6">Connect your first store to start drop-shipping with Framefox Connect.</p>
      <%= link_to connections_shopify_connect_path, class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors inline-flex items-center" do %>
        Connect Your First Store
      <% end %>
    </div>
  <% end %>
</div>
