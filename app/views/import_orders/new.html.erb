<% content_for :title, "Import Order - Framefox Connect" %>

<div class="space-y-8">
  <!-- Header with Back Button -->
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <%= link_to orders_path, class: "text-slate-600 hover:text-slate-900 transition-colors" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>
      <div>
        <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
          Import Order
        </h1>
        <p class="text-lg text-slate-600">
          Import an order from one of your connected stores.
        </p>
      </div>
    </div>
  </div>

  <!-- Import Form -->
  <div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-sm border border-slate-200 p-8">
    <%= form_with url: import_orders_path, method: :post, local: true do |form| %>
      
      <!-- Store Selection -->
      <div class="mb-6">
        <%= form.label :store_id, "Connected Store", class: "block text-sm font-semibold text-slate-900 mb-2" %>
        <%= form.select :store_id, 
                        options_from_collection_for_select(@stores, :id, :name),
                        { prompt: "Select a store..." },
                        { 
                          class: "block w-full px-4 py-3 bg-white border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-colors",
                          required: true
                        } %>
        <p class="mt-2 text-sm text-slate-500">
          Choose the store where the order was placed.
        </p>
      </div>

      <!-- Order ID Input -->
      <div class="mb-6">
        <%= form.label :order_id, "Order ID", class: "block text-sm font-semibold text-slate-900 mb-2" %>
        <%= form.text_field :order_id,
                            placeholder: "e.g., 6592019005730",
                            class: "block w-full px-4 py-3 bg-white border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-colors",
                            required: true %>
        <p class="mt-2 text-sm text-slate-500">
          Enter the numeric Order ID from your Shopify admin order URL.
        </p>
      </div>

      <!-- Help Text -->
      <div class="mb-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex items-start">
          <i class="fa-solid fa-info-circle text-blue-600 mt-0.5 mr-3"></i>
          <div>
            <h4 class="text-sm font-semibold text-blue-900 mb-2">How to find your Order ID</h4>
            <div class="text-sm text-blue-800 space-y-1">
              <p>1. Go to your Shopify Admin → Orders</p>
              <p>2. Click on the order you want to import</p>
              <p>3. Look at the URL in your browser. It will look like:</p>
              <p class="font-mono text-xs bg-white rounded px-2 py-1 mt-1">
                admin.shopify.com/store/.../orders/<span class="font-bold text-blue-900">6592019005730</span>
              </p>
              <p>4. Copy just the number at the end (e.g., 6592019005730)</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex items-center gap-4 mt-8">
        <%= form.submit "Import Order",
            class: "px-6 py-3 bg-slate-900 text-white font-medium rounded-lg hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition-colors" %>
        <%= link_to orders_path, 
            class: "px-6 py-3 bg-white text-slate-700 font-medium border border-slate-300 rounded-lg hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition-colors" do %>
          Cancel
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Connected Stores Info -->
  <div class="max-w-2xl">
    <div class="bg-slate-50 border border-slate-200 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-slate-900 mb-4">Your Connected Stores</h3>
      
      <% if @stores.any? %>
        <div class="space-y-3">
          <% @stores.each do |store| %>
            <div class="flex items-center space-x-3 p-3 bg-white rounded-md border border-slate-200">
              <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                <% if store.platform == "shopify" %>
                  <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M15.8 6.7c-.1-1-.5-1.8-1.2-2.4-.7-.6-1.6-.9-2.6-.9s-1.9.3-2.6.9c-.7.6-1.1 1.4-1.2 2.4-.1.8.1 1.6.5 2.3.4.7 1 1.2 1.7 1.5v.8c0 .6.4 1 1 1s1-.4 1-1v-.8c.7-.3 1.3-.8 1.7-1.5.4-.7.6-1.5.5-2.3z"/>
                  </svg>
                <% else %>
                  <svg class="w-4 h-4 text-slate-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/>
                  </svg>
                <% end %>
              </div>
              <div class="flex-1">
                <div class="text-sm font-medium text-slate-900">
                  <%= store.name %>
                </div>
                <div class="text-sm text-slate-500">
                  <%= store.platform.humanize %>
                  <% if store.shopify_domain %>
                    • <%= store.shopify_domain %>
                  <% end %>
                </div>
              </div>
              <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                <i class="fa-solid fa-check w-3 h-3 mr-1"></i>
                Active
              </span>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="w-12 h-12 bg-slate-200 rounded-lg flex items-center justify-center mx-auto mb-4">
            <i class="fa-solid fa-store text-slate-500"></i>
          </div>
          <h4 class="text-sm font-semibold text-slate-900 mb-2">No Connected Stores</h4>
          <p class="text-sm text-slate-600 mb-4">You need to connect at least one store to import orders.</p>
          <%= link_to connections_root_path, 
              class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors inline-flex items-center" do %>
            Connect a Store
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

