<% content_for :title, "Dashboard - Framefox Connect" %>
<div class="space-y-8">
  <!-- Page Header -->
  <div class="space-y-2">
    <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
      Dashboard
    </h1>
    <p class="text-lg text-slate-600">
      Welcome back! Here's an overview of your Framefox Connect activity.
    </p>
  </div>
  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Total Orders -->
    <div class="bg-white border border-slate-200 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-slate-600">Total Orders</p>
          <p class="text-3xl font-bold text-slate-900 mt-2">142</p>
          <p class="text-sm text-green-600 mt-2">+12% from last month</p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
          </svg>
        </div>
      </div>
    </div>
    <!-- Revenue -->
    <div class="bg-white border border-slate-200 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-slate-600">Revenue</p>
          <p class="text-3xl font-bold text-slate-900 mt-2">$8,420</p>
          <p class="text-sm text-green-600 mt-2">+23% from last month</p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>
    <!-- Connected Stores -->
    <div class="bg-white border border-slate-200 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-slate-600">Connected Stores</p>
          <p class="text-3xl font-bold text-slate-900 mt-2">3</p>
          <p class="text-sm text-slate-500 mt-2">2 active</p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
      </div>
    </div>
    <!-- Pending Orders -->
    <div class="bg-white border border-slate-200 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-slate-600">Pending Orders</p>
          <p class="text-3xl font-bold text-slate-900 mt-2">8</p>
          <p class="text-sm text-orange-600 mt-2">Requires attention</p>
        </div>
        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
  <!-- Quick Actions -->
  <div class="bg-white border border-slate-200 rounded-lg p-6">
    <h2 class="text-xl font-semibold text-slate-900 mb-4">Quick Actions</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <%= link_to orders_path, class: "flex items-center space-x-3 p-4 border border-slate-200 rounded-lg hover:bg-slate-50 transition-colors" do %>
        <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
        </div>
        <div>
          <p class="font-medium text-slate-900">View Orders</p>
          <p class="text-sm text-slate-600">Manage your orders</p>
        </div>
      <% end %>
      <%= link_to connections_root_path, class: "flex items-center space-x-3 p-4 border border-slate-200 rounded-lg hover:bg-slate-50 transition-colors" do %>
        <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
        </div>
        <div>
          <p class="font-medium text-slate-900">Connect Store</p>
          <p class="text-sm text-slate-600">Add a new store</p>
        </div>
      <% end %>
      <%= link_to new_import_order_path, class: "flex items-center space-x-3 p-4 border border-slate-200 rounded-lg hover:bg-slate-50 transition-colors" do %>
        <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
        </div>
        <div>
          <p class="font-medium text-slate-900">Import Orders</p>
          <p class="text-sm text-slate-600">Upload CSV file</p>
        </div>
      <% end %>
    </div>
  </div>
  <!-- Recent Activity -->
  <div class="bg-white border border-slate-200 rounded-lg p-6">
    <h2 class="text-xl font-semibold text-slate-900 mb-4">Recent Activity</h2>
    <div class="space-y-4">
      <!-- Placeholder activity items -->
      <div class="flex items-start space-x-3 pb-4 border-b border-slate-100">
        <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
        <div class="flex-1">
          <p class="text-sm font-medium text-slate-900">New order received</p>
          <p class="text-sm text-slate-600">Order #1042 from Shopify Store</p>
          <p class="text-xs text-slate-500 mt-1">2 hours ago</p>
        </div>
      </div>
      <div class="flex items-start space-x-3 pb-4 border-b border-slate-100">
        <div class="w-2 h-2 bg-blue-500 rounded-full mt-2"></div>
        <div class="flex-1">
          <p class="text-sm font-medium text-slate-900">Order shipped</p>
          <p class="text-sm text-slate-600">Order #1038 has been shipped</p>
          <p class="text-xs text-slate-500 mt-1">5 hours ago</p>
        </div>
      </div>
      <div class="flex items-start space-x-3 pb-4 border-b border-slate-100">
        <div class="w-2 h-2 bg-purple-500 rounded-full mt-2"></div>
        <div class="flex-1">
          <p class="text-sm font-medium text-slate-900">Product sync completed</p>
          <p class="text-sm text-slate-600">15 products synced from Shopify</p>
          <p class="text-xs text-slate-500 mt-1">1 day ago</p>
        </div>
      </div>
      <div class="flex items-start space-x-3">
        <div class="w-2 h-2 bg-orange-500 rounded-full mt-2"></div>
        <div class="flex-1">
          <p class="text-sm font-medium text-slate-900">Store connected</p>
          <p class="text-sm text-slate-600">New Shopify store connected successfully</p>
          <p class="text-xs text-slate-500 mt-1">3 days ago</p>
        </div>
      </div>
    </div>
  </div>
</div>
