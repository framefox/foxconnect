<% content_for :title, "Dashboard - Framefox Connect" %>
<div class="space-y-8">
  <!-- Page Header -->
  <div class="space-y-2">
    <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
      Welcome back <%= current_customer.first_name %>! 
    </h1>
    <p class="text-lg text-slate-600">
      Here's an overview of your Framefox Connect activity.
    </p>
  </div>
  <!-- Recent Activity -->
  <div class="bg-white border border-slate-200 rounded-lg p-6">
    <h2 class="text-xl font-semibold text-slate-900 mb-4">Recent Activity</h2>
    <div class="space-y-4">
      <!-- Placeholder activity items -->
      <div class="flex items-start space-x-3 pb-4 border-b border-slate-100">
        <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
        <div class="flex-1">
          <p class="text-sm font-medium text-slate-900">New order received</p>
          <p class="text-sm text-slate-600">Order #1042 from Shopify Store</p>
          <p class="text-xs text-slate-500 mt-1">2 hours ago</p>
        </div>
      </div>
      <div class="flex items-start space-x-3 pb-4 border-b border-slate-100">
        <div class="w-2 h-2 bg-blue-500 rounded-full mt-2"></div>
        <div class="flex-1">
          <p class="text-sm font-medium text-slate-900">Order shipped</p>
          <p class="text-sm text-slate-600">Order #1038 has been shipped</p>
          <p class="text-xs text-slate-500 mt-1">5 hours ago</p>
        </div>
      </div>
      <div class="flex items-start space-x-3 pb-4 border-b border-slate-100">
        <div class="w-2 h-2 bg-purple-500 rounded-full mt-2"></div>
        <div class="flex-1">
          <p class="text-sm font-medium text-slate-900">Product sync completed</p>
          <p class="text-sm text-slate-600">15 products synced from Shopify</p>
          <p class="text-xs text-slate-500 mt-1">1 day ago</p>
        </div>
      </div>
      <div class="flex items-start space-x-3">
        <div class="w-2 h-2 bg-orange-500 rounded-full mt-2"></div>
        <div class="flex-1">
          <p class="text-sm font-medium text-slate-900">Store connected</p>
          <p class="text-sm text-slate-600">New Shopify store connected successfully</p>
          <p class="text-xs text-slate-500 mt-1">3 days ago</p>
        </div>
      </div>
    </div>
  </div>
</div>
