<% content_for :title, "Users - Framefox Connect Admin" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="space-y-2">
      <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
        Users
      </h1>
      <p class="text-lg text-slate-600">
        Manage user accounts and their store connections.
      </p>
    </div>
    
    <%= link_to new_admin_user_path, class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
      Add New User
    <% end %>
  </div>

  <!-- Users List -->
  <div class="bg-white border border-slate-200 rounded-lg">
    <% if @users.any? %>
      <div class="divide-y divide-slate-200">
        <% @users.each do |user| %>
          <div class="p-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <div>
                  <div class="flex items-center space-x-2">
                    <h3 class="text-lg font-semibold text-slate-900"><%= user.full_name %></h3>
                    <% if user.admin? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                        Admin
                      </span>
                    <% end %>
                  </div>
                  <p class="text-sm text-slate-600"><%= user.email %></p>
                  <p class="text-xs text-slate-500">
                    Joined <%= user.created_at.strftime("%B %d, %Y") %>
                    • <%= pluralize(user.stores.count, "store") %>
                    • <%= pluralize(user.shopify_customers.count, "Shopify account") %>
                  </p>
                </div>
              </div>
              
              <div class="flex space-x-2">
                <%= link_to admin_user_path(user), class: "bg-slate-100 text-slate-700 hover:bg-slate-200 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
                  View
                <% end %>
                <%= link_to edit_admin_user_path(user), class: "bg-slate-100 text-slate-900 hover:bg-slate-200 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
                  Edit
                <% end %>
                <%= button_to admin_user_path(user), method: :delete, 
                    form: { onsubmit: "return confirm('Are you sure you want to delete this user? This will also remove their stores and Shopify accounts.')" },
                    class: "bg-red-100 text-red-800 hover:bg-red-200 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
                  Delete
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <% if @pagy.pages > 1 %>
        <div class="p-4 border-t border-slate-200">
          <%== pagy_nav(@pagy) %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <div class="w-16 h-16 bg-slate-100 rounded-lg flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-slate-900 mb-2">No users yet</h3>
        <p class="text-sm text-slate-600 mb-4">Add your first user to get started.</p>
        <%= link_to new_admin_user_path, class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors inline-flex items-center" do %>
          Add First User
        <% end %>
      </div>
    <% end %>
  </div>
</div>

