<%= form_with(model: [:admin, user], class: "space-y-6") do |form| %>
  <% if user.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-sm font-medium text-red-800 mb-2">
        <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
      </h3>
      <ul class="list-disc list-inside text-sm text-red-700">
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :email, class: "block text-sm font-medium text-slate-700 mb-2" %>
    <%= form.email_field :email, required: true,
        class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
        placeholder: "user@example.com" %>
  </div>
  <div>
    <%= form.label :first_name, class: "block text-sm font-medium text-slate-700 mb-2" %>
    <%= form.text_field :first_name,
        class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
        placeholder: "John" %>
  </div>
  <div>
    <%= form.label :last_name, class: "block text-sm font-medium text-slate-700 mb-2" %>
    <%= form.text_field :last_name,
        class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
        placeholder: "Doe" %>
  </div>
  <div>
    <%= form.label :password, class: "block text-sm font-medium text-slate-700 mb-2" %>
    <%= form.password_field :password, autocomplete: "new-password",
        class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
        placeholder: user.persisted? ? "Leave blank to keep current password" : "Enter password" %>
    <% if user.persisted? %>
      <p class="text-xs text-slate-500 mt-1">Leave blank if you don't want to change it</p>
    <% end %>
  </div>
  <div>
    <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-slate-700 mb-2" %>
    <%= form.password_field :password_confirmation, autocomplete: "new-password",
        class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
        placeholder: "Confirm password" %>
  </div>
  <div class="flex items-center space-x-3">
    <%= form.check_box :admin, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-slate-300 rounded" %>
    <%= form.label :admin, "Admin User", class: "text-sm font-medium text-slate-700" %>
  </div>
  <div class="flex items-center space-x-3">
    <%= form.submit class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors cursor-pointer" %>
    <%= link_to "Cancel", user.persisted? ? admin_user_path(user) : admin_users_path,
        class: "text-slate-700 hover:text-slate-900 px-4 py-2 text-sm font-medium" %>
  </div>
<% end %>
