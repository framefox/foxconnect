<% content_for :title, "Edit Store - #{@store.name}" %>
<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="space-y-2">
      <div class="flex items-center space-x-2">
        <%= link_to admin_stores_path, class: "text-slate-600 hover:text-slate-900" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
        <% end %>
        <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
          Edit Store
        </h1>
      </div>
      <p class="text-lg text-slate-600">
        Update store settings for <%= @store.name %>
      </p>
    </div>
  </div>
  <%= form_with(model: [:admin, @store], class: "space-y-6") do |form| %>
    <% if @store.errors.any? %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul role="list" class="list-disc pl-5 space-y-1">
                <% @store.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="bg-white border border-slate-200 rounded-lg p-6 space-y-6">
      <!-- Store Info (Read-only) -->
      <div class="space-y-4 pb-6 border-b border-slate-200">
        <h2 class="text-lg font-semibold text-slate-900">Store Information</h2>
        <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-slate-500">Store Name</dt>
            <dd class="mt-1 text-sm text-slate-900"><%= @store.name %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-slate-500">Shopify Domain</dt>
            <dd class="mt-1 text-sm text-slate-900"><%= @store.shopify_domain %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-slate-500">Platform</dt>
            <dd class="mt-1 text-sm text-slate-900"><%= @store.platform_display_name %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-slate-500">Status</dt>
            <dd class="mt-1">
              <% if @store.active? %>
                <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                  Active
                </span>
              <% else %>
                <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
                  Inactive
                </span>
              <% end %>
            </dd>
          </div>
        </dl>
      </div>
      <!-- User Assignment -->
      <div class="space-y-4">
        <h2 class="text-lg font-semibold text-slate-900">User Assignment</h2>
        <div>
          <%= form.label :user_id, "Assign to User", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.collection_select :user_id, 
              @users, 
              :id, 
              :full_name, 
              { include_blank: "-- No user assigned --" },
              class: "block w-full px-3 py-2 rounded-md border border-slate-300 shadow-sm focus:border-slate-900 focus:ring-2 focus:ring-slate-200 focus:ring-opacity-50 text-slate-900" %>
          <p class="mt-2 text-sm text-slate-500">
            Assign this store to a user. The user will be able to manage this store from their dashboard.
          </p>
          <% if @store.user %>
            <div class="mt-3 p-3 bg-blue-50 rounded-md">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-blue-600 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div class="flex-1">
                  <p class="text-sm text-blue-800">
                    Currently assigned to: <strong><%= @store.user.full_name %></strong> (<%= @store.user.email %>)
                  </p>
                </div>
              </div>
            </div>
          <% else %>
            <div class="mt-3 p-3 bg-yellow-50 rounded-md">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-yellow-600 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
                <div class="flex-1">
                  <p class="text-sm text-yellow-800">
                    <strong>Warning:</strong> This store is not assigned to any user. The owner won't be able to manage it.
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="bg-white border border-slate-200 rounded-lg p-6 space-y-6">
      <!-- AI Mapping Settings -->
      <div class="space-y-4">
        <div>
          <h2 class="text-lg font-semibold text-slate-900">AI Mapping Settings</h2>
          <p class="text-sm text-slate-600 mt-1">Configure AI-powered variant mapping for this store</p>
        </div>
        <!-- Enable AI Mapping -->
        <div class="flex items-start">
          <div class="flex items-center h-5">
            <%= form.check_box :ai_mapping_enabled, 
                class: "h-4 w-4 rounded border-slate-300 text-slate-900 focus:ring-slate-500" %>
          </div>
          <div class="ml-3">
            <%= form.label :ai_mapping_enabled, "Enable AI Variant Mapping", class: "text-sm font-medium text-slate-900" %>
            <p class="text-sm text-slate-500">
              Allow users to use AI-powered auto-mapping for product variants in this store
            </p>
          </div>
        </div>
        <!-- AI Mapping Prompt Override -->
        <div>
          <%= form.label :ai_mapping_prompt, "Custom AI Prompt (Optional)", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= form.text_area :ai_mapping_prompt, 
              rows: 4,
              placeholder: "Add store-specific instructions for the AI mapping engine...",
              class: "block w-full px-3 py-2 rounded-md border border-slate-300 shadow-sm focus:border-slate-900 focus:ring-2 focus:ring-slate-200 focus:ring-opacity-50 text-slate-900" %>
          <p class="mt-2 text-sm text-slate-500">
            Provide custom instructions to fine-tune how the AI matches variants for this specific store. This will be added to the standard AI prompt.
          </p>
        </div>
      </div>
    </div>
    <div class="bg-white border border-slate-200 rounded-lg p-6 space-y-6">
      <!-- Mockup Settings -->
      <div class="space-y-4">
        <div>
          <h2 class="text-lg font-semibold text-slate-900">Mockup Settings</h2>
          <p class="text-sm text-slate-600 mt-1">Customize the appearance of product mockups</p>
        </div>
        <!-- Mockup Background Color -->
        <div>
          <%= form.label :mockup_bg_colour, "Mockup Background Color", class: "block text-sm font-medium text-slate-700 mb-3" %>
          <%= react_component('ColorPicker', {
            name: 'store[mockup_bg_colour]',
            initialValue: @store.mockup_bg_colour || 'f4f4f4'
          }) %>
          <p class="mt-3 text-sm text-slate-500">
            Choose a background color for product mockup previews
          </p>
        </div>
      </div>
    </div>
    <div class="flex items-center justify-between">
      <%= link_to "Cancel", admin_stores_path, 
          class: "text-slate-600 hover:text-slate-900 px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
      <%= form.submit "Save Changes", class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors cursor-pointer" %>
    </div>
  <% end %>
</div>
