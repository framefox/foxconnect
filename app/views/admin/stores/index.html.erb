<% content_for :title, "Stores - Framefox Connect Admin" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="space-y-2">
      <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
        Connected Stores
      </h1>
      <p class="text-lg text-slate-600">
        Manage your Shopify store connections.
      </p>
    </div>
    
    <%= link_to "/login", class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
      Connect New Store
    <% end %>
  </div>

  <!-- Stores List -->
  <div class="bg-white border border-slate-200 rounded-lg ">
    <% if @stores.any? %>
      <div class="divide-y divide-slate-200">
        <% @stores.each do |store| %>
          <div class="p-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="w-12 h-12 <%= store.active? ? 'bg-green-100' : 'bg-red-100' %> rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 <%= store.active? ? 'text-green-600' : 'text-red-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <% if store.active? %>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    <% else %>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                    <% end %>
                  </svg>
                </div>
                <div>
                  <div class="flex items-center space-x-2">
                    <h3 class="text-lg font-semibold text-slate-900"><%= store.name %></h3>
                    <% unless store.active? %>
                      <span class="inline-flex items-center rounded-full bg-red-100 px-2 py-0.5 text-xs font-medium text-red-800">
                        Deactivated
                      </span>
                    <% end %>
                    <% unless store.shopify_customer %>
                      <span class="inline-flex items-center rounded-full bg-yellow-100 px-2 py-0.5 text-xs font-medium text-yellow-800">
                        No Customer
                      </span>
                    <% end %>
                  </div>
                  <p class="text-sm text-slate-600"><%= store.shopify_domain %></p>
                  <p class="text-xs text-slate-500">
                    <% if store.shopify_customer %>
                      Customer: <%= store.shopify_customer.full_name %> •
                    <% end %>
                    Connected <%= store.created_at.strftime("%B %d, %Y") %>
                    <% if store.last_sync_at %>
                      • Last sync: <%= store.last_sync_at.strftime("%B %d, %Y at %I:%M %p") %>
                    <% end %>
                  </p>
                </div>
              </div>
              
              <div class="flex items-center space-x-2">
                <div class="flex space-x-2">
                  <%= link_to edit_admin_store_path(store), class: "hover:bg-slate-100 hover:text-slate-900 px-3 py-1.5 rounded-md text-xs font-medium transition-colors" do %>
                    Edit
                  <% end %>
                  <%= link_to admin_store_path(store), class: "hover:bg-slate-100 hover:text-slate-900 px-3 py-1.5 rounded-md text-xs font-medium transition-colors" do %>
                    View
                  <% end %>
                  <%= button_to sync_products_admin_store_path(store), method: :post, class: "bg-slate-100 text-slate-900 hover:bg-slate-200 px-3 py-1.5 rounded-md text-xs font-medium transition-colors" do %>
                    Sync
                  <% end %>
                  <%= button_to admin_store_path(store), method: :delete, form: { onsubmit: "return confirm('Are you sure you want to disconnect this store?')" },
                      class: "bg-red-100 text-red-800 hover:bg-red-200 px-3 py-1.5 rounded-md text-xs font-medium transition-colors" do %>
                    Disconnect
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="w-16 h-16 bg-slate-100 rounded-lg flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-slate-900 mb-2">No stores connected</h3>
        <p class="text-sm text-slate-600 mb-4">Connect your first Shopify store to get started with drop-shipping.</p>
        <%= link_to "/login", class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors inline-flex items-center" do %>
          Connect Your First Store
        <% end %>
      </div>
    <% end %>
  </div>
</div>
