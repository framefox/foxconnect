<% content_for :title, "New Product - #{@store.name} - Framefox Connect Admin" %>

<div class="space-y-6" data-controller="product-options">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="space-y-2">
      <div class="flex items-center space-x-2">
        <%= link_to admin_store_path(@store), class: "text-slate-600 hover:text-slate-900" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        <% end %>
        <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
          Create New Product
        </h1>
      </div>
      <p class="text-lg text-slate-600">
        Create a new product in <%= @store.name %>
      </p>
    </div>
  </div>

  <!-- Form -->
  <%= form_with url: admin_store_products_path(@store), method: :post, local: true, class: "space-y-6" do |f| %>
    <!-- Basic Information -->
    <div class="bg-white border border-slate-200 rounded-lg p-6 space-y-6">
      <h2 class="text-lg font-semibold text-slate-900">Basic Information</h2>
      
      <!-- Title -->
      <div>
        <label for="product_title" class="block text-sm font-medium text-slate-700 mb-2">
          Title <span class="text-red-500">*</span>
        </label>
        <input type="text"
               name="product[title]"
               id="product_title"
               required
               class="w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent"
               placeholder="e.g. Framed Photo Print">
      </div>

      <!-- Description -->
      <div>
        <label for="product_description_html" class="block text-sm font-medium text-slate-700 mb-2">
          Description
        </label>
        <textarea name="product[description_html]"
                  id="product_description_html"
                  rows="6"
                  class="w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent"
                  placeholder="Product description (HTML allowed)"></textarea>
        <p class="mt-1 text-xs text-slate-500">You can use basic HTML tags like &lt;strong&gt;, &lt;em&gt;, &lt;p&gt;, etc.</p>
      </div>
    </div>

    <!-- Product Options (Variants) -->
    <div class="bg-white border border-slate-200 rounded-lg p-6 space-y-6">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-lg font-semibold text-slate-900">Product Options</h2>
          <p class="text-sm text-slate-600 mt-1">Define options like Size, Color, or Material. Each option can have multiple values.</p>
        </div>
        <button type="button"
                data-action="product-options#addOption"
                data-product-options-max-param="3"
                class="bg-slate-100 text-slate-900 hover:bg-slate-200 px-4 py-2 rounded-md text-sm font-medium transition-colors">
          + Add Option
        </button>
      </div>

      <div data-product-options-target="optionsContainer" class="space-y-4">
        <!-- Options will be added here dynamically -->
      </div>

      <div data-product-options-target="emptyState" class="text-center py-8 text-slate-500">
        <p class="text-sm">No options added yet. Click "Add Option" to create product variants.</p>
      </div>
    </div>

    <!-- Form Actions -->
    <div class="flex items-center justify-end space-x-3">
      <%= link_to "Cancel", admin_store_path(@store), 
          class: "px-4 py-2 border border-slate-300 rounded-md text-sm font-medium text-slate-700 hover:bg-slate-50 transition-colors" %>
      <button type="submit" class="bg-slate-900 text-slate-50 hover:bg-slate-800 px-6 py-2 rounded-md text-sm font-medium transition-colors">
        Create Product
      </button>
    </div>
  <% end %>

  <!-- Template for option (hidden) -->
  <template data-product-options-target="optionTemplate">
  <div class="border border-slate-200 rounded-lg p-4 space-y-4" data-option-index="__INDEX__">
    <div class="flex items-center justify-between">
      <h3 class="text-sm font-semibold text-slate-900">Option __NUMBER__</h3>
      <button type="button"
              data-action="product-options#removeOption"
              data-option-index="__INDEX__"
              class="text-red-600 hover:text-red-800 text-sm font-medium">
        Remove
      </button>
    </div>

    <!-- Option Name -->
    <div>
      <label class="block text-sm font-medium text-slate-700 mb-2">
        Option Name <span class="text-red-500">*</span>
      </label>
      <input type="text"
             name="product[product_options][__INDEX__][name]"
             required
             class="w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent"
             placeholder="e.g. Size, Color, Material">
    </div>

    <!-- Option Values -->
    <div>
      <label class="block text-sm font-medium text-slate-700 mb-2">
        Option Values <span class="text-red-500">*</span>
      </label>
      <div class="space-y-2" data-values-container="__INDEX__">
        <div class="flex items-center space-x-2" data-value-index="0">
          <input type="text"
                 name="product[product_options][__INDEX__][values][]"
                 required
                 class="flex-1 px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent"
                 placeholder="e.g. Small, Medium, Large">
          <button type="button"
                  data-action="product-options#removeValue"
                  data-option-index="__INDEX__"
                  data-value-index="0"
                  class="text-red-600 hover:text-red-800 text-sm font-medium px-2 py-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>
      <button type="button"
              data-action="product-options#addValue"
              data-option-index="__INDEX__"
              class="mt-2 text-slate-600 hover:text-slate-900 text-sm font-medium">
        + Add Value
      </button>
    </div>
  </div>
</template>

<!-- Template for value input (hidden) -->
<template data-product-options-target="valueTemplate">
  <div class="flex items-center space-x-2" data-value-index="__VALUE_INDEX__">
    <input type="text"
           name="product[product_options][__OPTION_INDEX__][values][]"
           required
           class="flex-1 px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent"
           placeholder="Value">
    <button type="button"
            data-action="product-options#removeValue"
            data-option-index="__OPTION_INDEX__"
            data-value-index="__VALUE_INDEX__"
            class="text-red-600 hover:text-red-800 text-sm font-medium px-2 py-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>
</template>
</div>

