<% content_for :title, "Admin Dashboard - Framefox Connect" %>
<div class="space-y-8">
  <!-- Page Header -->
  <div class="space-y-2">
    <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
      Admin Dashboard
    </h1>
    <p class="text-lg text-slate-600">
      Welcome to the Framefox Connect admin area.
    </p>
  </div>
  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white border border-slate-200 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-slate-600">Active Stores</p>
          <p class="text-2xl font-semibold text-slate-900"><%= @stores_count %></p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
        </div>
      </div>
    </div>
    <div class="bg-white border border-slate-200 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-slate-600">Total Connections</p>
          <p class="text-2xl font-semibold text-slate-900"><%= @total_stores %></p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
      </div>
    </div>
    <div class="bg-white border border-slate-200 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-slate-600">Platform</p>
          <p class="text-2xl font-semibold text-slate-900">Shopify</p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
  <!-- Quick Actions -->
  <div class="bg-white border border-slate-200 rounded-lg p-6">
    <div class="space-y-4">
      <h3 class="text-lg font-semibold text-slate-900">Quick Actions</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <%= link_to admin_stores_path, class: "flex items-center p-4 border border-slate-200 rounded-lg hover:bg-slate-50 transition-colors" do %>
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <div>
            <p class="font-medium text-slate-900">Stores</p>
            <p class="text-sm text-slate-600">Manage stores</p>
          </div>
        <% end %>
        <%= link_to admin_users_path, class: "flex items-center p-4 border border-slate-200 rounded-lg hover:bg-slate-50 transition-colors" do %>
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-4">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </div>
          <div>
            <p class="font-medium text-slate-900">Users</p>
            <p class="text-sm text-slate-600">Manage users</p>
          </div>
        <% end %>
        <%= link_to admin_orders_path, class: "flex items-center p-4 border border-slate-200 rounded-lg hover:bg-slate-50 transition-colors" do %>
          <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
          <div>
            <p class="font-medium text-slate-900">Orders</p>
            <p class="text-sm text-slate-600">View orders</p>
          </div>
        <% end %>
        <%= link_to admin_shopify_customers_path, class: "flex items-center p-4 border border-slate-200 rounded-lg hover:bg-slate-50 transition-colors" do %>
          <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center mr-4">
            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
          </div>
          <div>
            <p class="font-medium text-slate-900">Customers</p>
            <p class="text-sm text-slate-600">Manage customers</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
