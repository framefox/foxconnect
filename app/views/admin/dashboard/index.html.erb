<% content_for :title, "Admin Dashboard - Framefox Connect" %>
<div class="space-y-8">
  <!-- Page Header -->
  <div class="space-y-2">
    <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
      Dashboard
    </h1>
    <p class="text-lg text-slate-600">
      Manage your drop-shipping connections and monitor your business.
    </p>
  </div>
  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-slate-600">Active Stores</p>
          <p class="text-2xl font-semibold text-slate-900"><%= @stores_count %></p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
        </div>
      </div>
    </div>
    <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-slate-600">Total Connections</p>
          <p class="text-2xl font-semibold text-slate-900"><%= @total_stores %></p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
      </div>
    </div>
    <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-slate-600">Platform</p>
          <p class="text-2xl font-semibold text-slate-900">Shopify</p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
  <!-- Current Store Info -->
  <% if @current_store %>
    <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6">
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-slate-900">Current Store Connection</h3>
          <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
            Active
          </span>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-slate-600">Store Name</p>
            <p class="font-medium text-slate-900"><%= @current_store.name %></p>
          </div>
          <div>
            <p class="text-sm text-slate-600">Shopify Domain</p>
            <p class="font-medium text-slate-900"><%= @current_store.shopify_domain %></p>
          </div>
          <div>
            <p class="text-sm text-slate-600">Connected</p>
            <p class="font-medium text-slate-900"><%= @current_store.created_at.strftime("%B %d, %Y") %></p>
          </div>
          <div>
            <p class="text-sm text-slate-600">Last Sync</p>
            <p class="font-medium text-slate-900">
              <%= @current_store.last_sync_at ? @current_store.last_sync_at.strftime("%B %d, %Y at %I:%M %p") : "Never" %>
            </p>
          </div>
        </div>
        <div class="flex space-x-4">
          <%= link_to admin_store_path(@current_store), class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
            View Details
          <% end %>
          <%= link_to sync_products_admin_store_path(@current_store), method: :post, class: "bg-slate-100 text-slate-900 hover:bg-slate-200 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
            Sync Products
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6">
      <div class="text-center space-y-4">
        <div class="w-16 h-16 bg-slate-100 rounded-lg flex items-center justify-center mx-auto">
          <svg class="w-8 h-8 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-slate-900">Connect Your First Store</h3>
          <p class="text-sm text-slate-600">Start by connecting your Shopify store to begin drop-shipping.</p>
        </div>
        <%= link_to "/login", class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors inline-flex items-center" do %>
          Connect Shopify Store
        <% end %>
      </div>
    </div>
  <% end %>
  <!-- Quick Actions -->
  <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6">
    <div class="space-y-4">
      <h3 class="text-lg font-semibold text-slate-900">Quick Actions</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <%= link_to admin_stores_path, class: "flex items-center p-4 border border-slate-200 rounded-lg hover:bg-slate-50 transition-colors" do %>
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <div>
            <p class="font-medium text-slate-900">Manage Stores</p>
            <p class="text-sm text-slate-600">View and manage all connected stores</p>
          </div>
        <% end %>
        <div class="flex items-center p-4 border border-slate-200 rounded-lg opacity-50">
          <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center mr-4">
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
          <div>
            <p class="font-medium text-gray-500">View Products</p>
            <p class="text-sm text-gray-400">Coming in Phase 2</p>
          </div>
        </div>
        <div class="flex items-center p-4 border border-slate-200 rounded-lg opacity-50">
          <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center mr-4">
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
          <div>
            <p class="font-medium text-gray-500">Process Orders</p>
            <p class="text-sm text-gray-400">Coming in Phase 3</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
