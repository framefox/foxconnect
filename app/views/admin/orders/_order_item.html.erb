<%
  # Local variables expected:
  # - item: OrderItem object
  # - order: Order object (for currency)
  # - quantity: Integer (allows overriding quantity for fulfillment displays)
  quantity ||= item.quantity
%>
<div class="p-6 group">
  <div class="flex items-start space-x-4">
    <!-- Product Image -->
    <% if item.variant_mapping&.framed_preview_thumbnail %>
      <div class="flex-shrink-0 w-24 h-24 bg-slate-100 rounded-lg overflow-hidden border border-slate-200">
        <%= image_tag item.variant_mapping.framed_preview_thumbnail, 
            alt: item.display_name,
            class: "w-full h-full object-cover" %>
      </div>
    <% else %>
      <div class="flex-shrink-0 w-24 h-24 bg-slate-100 rounded-lg overflow-hidden border border-slate-200 flex items-center justify-center">
        <%= svg_icon('ImageIcon', class: 'w-8 h-8 text-slate-400') %>
      </div>
    <% end %>

    <!-- Product Details -->
    <div class="flex-1 min-w-0">
      <div class="flex items-start justify-between">
        <div class="flex-1">
          <h4 class="text-sm font-medium text-slate-900">
            <%= item.display_name %>
            <span class="inline-flex items-center rounded-lg bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-700 ml-2">
              x<%= quantity %>
            </span>
          </h4>
          <% if item.sku.present? %>
            <p class="text-sm text-slate-500 mt-1">SKU: <%= item.sku %></p>
          <% end %>
          
          <!-- Variant Mapping Details -->
          <% if item.variant_mapping %>
            <div class="mt-3 space-y-2">
              <% if item.variant_mapping.frame_sku_title.present? %>
                <div class="flex items-center text-sm text-slate-700">
                  <%= svg_icon('ProductIcon', class: 'w-4 h-4 mr-2 text-slate-500') %>
                  <span class="font-medium"><%= item.variant_mapping.frame_sku_title %></span>
                  <% if item.variant_mapping.frame_sku_code.present? %>
                    <span class="ml-2 text-slate-500">(<%= item.variant_mapping.frame_sku_code %>)</span>
                  <% end %>
                </div>
              <% end %>
              
              <% if item.variant_mapping.dimensions_display.present? %>
                <div class="flex items-center text-sm text-slate-700">
                  <%= svg_icon('MeasurementSizeIcon', class: 'w-4 h-4 mr-2 text-slate-500') %>
                  <span><%= item.variant_mapping.dimensions_display %></span>
                </div>
              <% end %>
              
              <% if item.variant_mapping.image_filename.present? %>
                <div class="flex items-center text-sm text-slate-700">
                  <%= svg_icon('ImageIcon', class: 'w-4 h-4 mr-2 text-slate-500') %>
                  <span class="font-mono text-xs"><%= item.variant_mapping.image_filename %></span>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="mt-2">
              <span class="inline-flex items-center rounded-lg bg-orange-100 px-2 py-0.5 text-xs font-medium text-orange-700">
                No variant mapping
              </span>
            </div>
          <% end %>
        </div>
        
        <!-- Price and Production Cost -->
        <div class="text-right ml-4">
          <div class="flex items-center space-x-2 text-sm text-slate-900">
            <span><%= number_to_currency(item.price, unit: '$') %></span>
            <span>Ã—</span>
            <span class="inline-flex items-center rounded-lg bg-slate-100 px-2 py-0.5 text-sm font-medium text-slate-700">
              <%= quantity %>
            </span>
          </div>
          <% if item.production_cost.present? && item.production_cost > 0 %>
            <div class="mt-2 text-xs text-slate-600">
              Production: <%= item.production_cost.format %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

