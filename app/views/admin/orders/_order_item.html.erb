<%
  # Local variables expected:
  # - item: OrderItem object
  # - order: Order object (for currency)
  # - quantity: Integer (allows overriding quantity for fulfillment displays)
  quantity ||= item.quantity
  mapping = item.effective_variant_mapping
%>
<div class="p-6 group">
  <div class="flex items-start space-x-4">
    <!-- Product Image -->
    <% if mapping && item.country_matches_variant_mapping? && mapping.framed_preview_thumbnail %>
      <div class="flex-shrink-0 w-24 h-24 bg-slate-100 rounded-lg overflow-hidden border border-slate-200">
        <%= image_tag mapping.framed_preview_thumbnail, 
            alt: item.display_name,
            class: "w-full h-full object-cover" %>
      </div>
    <% else %>
      <div class="flex-shrink-0 w-24 h-24 bg-slate-100 rounded-lg overflow-hidden border border-slate-200 flex items-center justify-center">
        <%= svg_icon('ImageIcon', class: 'w-8 h-8 text-slate-400') %>
      </div>
    <% end %>

    <!-- Product Details -->
    <div class="flex-1 min-w-0">
      <div class="flex items-start justify-between">
        <div class="flex-1">        
          <h4 class="text-sm font-medium text-slate-900">
            <% if item.product_variant&.product %>
              <%= link_to item.display_name, connections_store_product_path(order.store, item.product_variant.product), class: "text-slate-900 hover:text-blue-600 transition-colors" %>
            <% else %>
              <%= item.display_name %>
            <% end %>
            <% if item.is_custom? %>
              <span class="inline-flex items-center rounded-lg bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-700 ml-2">
                Custom
              </span>
            <% end %>
            <span class="inline-flex items-center rounded-lg bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-700 ml-2">
              x<%= quantity %>
            </span>
          </h4>
          <% if item.sku.present? %>
            <p class="text-sm text-slate-500 mt-1">SKU: <%= item.sku %></p>
          <% end %>
          
          <!-- Variant Mapping Details -->
          <% if mapping && item.country_matches_variant_mapping? %>
            <div class="mt-3">
              <div class="text-sm font-medium text-slate-900 mb-2">
                Fulfilled as <%= mapping.dimensions_display %>
              </div>
              <div class="flex flex-wrap gap-2">
                <% if mapping.frame_sku_description.present? %>
                  <% mapping.frame_sku_description.split('|').each do |part| %>
                    <div class="inline-flex items-center rounded-lg px-2 py-1 text-xs font-medium whitespace-nowrap bg-gray-100 text-gray-500">
                      <%= part.strip %>
                    </div>
                  <% end %>
                <% end %>
                <% if mapping.image_filename.present? %>
                  <div class="inline-flex items-center rounded-lg px-2 py-1 text-xs font-medium whitespace-nowrap bg-gray-100 text-gray-500">
                    Image: <%= mapping.image_filename %>
                  </div>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="mt-2">
              <span class="inline-flex items-center rounded-lg bg-orange-100 px-2 py-0.5 text-xs font-medium text-orange-700">
                No variant mapping
              </span>
            </div>
          <% end %>
        </div>
        
        <!-- Price and Production Cost -->
        <div class="text-right ml-4">
          <div class="flex items-center space-x-2 text-sm text-slate-900">
            <span><%= number_to_currency(item.price, unit: '$') %></span>
            <span>Ã—</span>
            <span class="inline-flex items-center rounded-lg bg-slate-100 px-2 py-0.5 text-sm font-medium text-slate-700">
              <%= quantity %>
            </span>
          </div>
          <% if item.production_cost.present? && item.production_cost > 0 %>
            <div class="mt-2 text-xs text-slate-600">
              Production: <%= item.production_cost.format %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

