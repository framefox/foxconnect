<% content_for :title, "Customers - Framefox Connect Admin" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="space-y-2">
      <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
        Shopify Customers
      </h1>
      <p class="text-lg text-slate-600">
        Manage customer accounts and their store connections.
      </p>
    </div>
    
    <%= link_to new_admin_shopify_customer_path, class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
      Add New Customer
    <% end %>
  </div>

  <!-- Customers List -->
  <div class="bg-white border border-slate-200 rounded-lg">
    <% if @customers.any? %>
      <div class="divide-y divide-slate-200">
        <% @customers.each do |customer| %>
          <div class="p-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <div>
                  <div class="flex items-center space-x-2">
                    <h3 class="text-lg font-semibold text-slate-900"><%= customer.full_name %></h3>
                    <% if customer.company %>
                      <span class="inline-flex items-center rounded-full bg-purple-100 px-2 py-0.5 text-xs font-medium text-purple-800">
                        <%= customer.company.company_name %>
                      </span>
                    <% end %>
                  </div>
                  <p class="text-sm text-slate-600"><%= customer.email %></p>
                  <p class="text-xs text-slate-500">
                    Customer ID: <%= customer.external_shopify_id %>
                    • Joined <%= customer.created_at.strftime("%B %d, %Y") %>
                    • <%= pluralize(customer.stores.count, "store") %>
                  </p>
                </div>
              </div>
              
              <div class="flex space-x-2">
                <%= link_to admin_shopify_customer_path(customer), class: "hover:bg-slate-100 hover:text-slate-900 px-3 py-1.5 rounded-md text-xs font-medium transition-colors" do %>
                  View
                <% end %>
                <%= link_to edit_admin_shopify_customer_path(customer), class: "bg-slate-100 text-slate-900 hover:bg-slate-200 px-3 py-1.5 rounded-md text-xs font-medium transition-colors" do %>
                  Edit
                <% end %>
                <%= button_to admin_shopify_customer_path(customer), method: :delete, 
                    form: { onsubmit: "return confirm('Are you sure you want to delete this customer? This will also remove their store associations.')" },
                    class: "bg-red-100 text-red-800 hover:bg-red-200 px-3 py-1.5 rounded-md text-xs font-medium transition-colors" do %>
                  Delete
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <% if @pagy.pages > 1 %>
        <div class="p-4 border-t border-slate-200">
          <%== pagy_nav(@pagy) %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <div class="w-16 h-16 bg-slate-100 rounded-lg flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-slate-900 mb-2">No customers yet</h3>
        <p class="text-sm text-slate-600 mb-4">Add your first customer to get started.</p>
        <%= link_to new_admin_shopify_customer_path, class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors inline-flex items-center" do %>
          Add First Customer
        <% end %>
      </div>
    <% end %>
  </div>
</div>

