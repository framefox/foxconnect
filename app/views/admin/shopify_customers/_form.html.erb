<div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-sm border border-slate-200 p-8">
  <%= form_with(model: [:admin, customer]) do |form| %>
    <% if customer.errors.any? %>
      <div class="mb-6 rounded-lg bg-red-50 border border-red-300 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <i class="fa-solid fa-circle-exclamation text-red-600"></i>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-semibold text-red-900">
              <%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-600">
              <ul role="list" class="list-disc pl-5 space-y-1">
                <% customer.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <!-- Shopify Customer ID -->
    <div class="mb-6">
      <%= form.label :shopify_customer_id, "Shopify Customer ID", class: "block text-sm font-semibold text-slate-900 mb-2" %>
      <%= form.number_field :shopify_customer_id, 
          class: "block w-full px-4 py-3 bg-white border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-colors",
          required: true %>
      <p class="mt-2 text-sm text-slate-500">The customer ID from the main Shopify app</p>
    </div>
    <!-- Email -->
    <div class="mb-6">
      <%= form.label :email, "Email", class: "block text-sm font-semibold text-slate-900 mb-2" %>
      <%= form.email_field :email, 
          class: "block w-full px-4 py-3 bg-white border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-colors",
          placeholder: "customer@example.com",
          required: true %>
    </div>
    <!-- Name Fields -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 mb-6">
      <div>
        <%= form.label :first_name, "First Name", class: "block text-sm font-semibold text-slate-900 mb-2" %>
        <%= form.text_field :first_name, 
            class: "block w-full px-4 py-3 bg-white border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-colors",
            placeholder: "John" %>
      </div>
      <div>
        <%= form.label :last_name, "Last Name", class: "block text-sm font-semibold text-slate-900 mb-2" %>
        <%= form.text_field :last_name, 
            class: "block w-full px-4 py-3 bg-white border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-colors",
            placeholder: "Doe" %>
      </div>
    </div>
    <!-- Action Buttons -->
    <div class="flex items-center gap-4 mt-8">
      <%= form.submit class: "px-6 py-3 bg-slate-900 text-white font-medium rounded-lg hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition-colors cursor-pointer" %>
      <%= link_to "Cancel", admin_shopify_customers_path, 
          class: "px-6 py-3 bg-white text-slate-700 font-medium border border-slate-300 rounded-lg hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition-colors" %>
    </div>
  <% end %>
</div>
