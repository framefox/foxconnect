<div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-sm border border-slate-200 p-8">
  <%= form_with(model: [:admin, customer]) do |form| %>
    <% if customer.errors.any? %>
      <div class="mb-6 rounded-lg bg-red-50 border border-red-300 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <i class="fa-solid fa-circle-exclamation text-red-600"></i>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-semibold text-red-900">
              <%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-600">
              <ul role="list" class="list-disc pl-5 space-y-1">
                <% customer.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <!-- User Assignment -->
    <div class="mb-6">
      <%= form.label :user_id, "User", class: "block text-sm font-semibold text-slate-900 mb-2" %>
      <%= form.collection_select :user_id, 
          User.order(:email), 
          :id, 
          :full_name, 
          { include_blank: "-- Select a user --" },
          class: "block w-full px-4 py-3 bg-white border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-colors",
          required: true %>
      <p class="mt-2 text-sm text-slate-500">Link this Shopify customer to a user account. Create users in the Users admin section.</p>
    </div>
    <!-- Shopify Customer ID -->
    <div class="mb-6">
      <%= form.label :external_shopify_id, "Shopify Customer ID", class: "block text-sm font-semibold text-slate-900 mb-2" %>
      <%= form.number_field :external_shopify_id, 
          class: "block w-full px-4 py-3 bg-white border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-colors",
          required: true %>
      <p class="mt-2 text-sm text-slate-500">The customer ID from the main Shopify app</p>
    </div>
    <!-- Company Assignment -->
    <div class="mb-6">
      <%= form.label :company_id, "Company (B2B)", class: "block text-sm font-semibold text-slate-900 mb-2" %>
      <%= form.collection_select :company_id, 
          Company.ordered_by_name, 
          :id, 
          :company_name, 
          { include_blank: "-- No company (individual customer) --" },
          class: "block w-full px-4 py-3 bg-white border border-slate-300 rounded-lg text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-colors" %>
      <p class="mt-2 text-sm text-slate-500">Assign this customer to a B2B company if they represent a business account</p>
    </div>
    <!-- Action Buttons -->
    <div class="flex items-center gap-4 mt-8">
      <%= form.submit class: "px-6 py-3 bg-slate-900 text-white font-medium rounded-lg hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition-colors cursor-pointer" %>
      <%= link_to "Cancel", admin_shopify_customers_path, 
          class: "px-6 py-3 bg-white text-slate-700 font-medium border border-slate-300 rounded-lg hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition-colors" %>
    </div>
  <% end %>
</div>
