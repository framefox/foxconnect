<%= form_with(model: [:admin, customer], class: "space-y-6") do |form| %>
  <% if customer.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc pl-5 space-y-1">
              <% customer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white border border-slate-200 rounded-lg p-6 space-y-6">
    <div>
      <%= form.label :shopify_customer_id, "Shopify Customer ID", class: "block text-sm font-medium text-slate-700 mb-2" %>
      <%= form.number_field :shopify_customer_id, 
          class: "block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-900 focus:ring focus:ring-slate-200 focus:ring-opacity-50",
          required: true %>
      <p class="mt-1 text-sm text-slate-500">The customer ID from the main Shopify app</p>
    </div>

    <div>
      <%= form.label :email, "Email", class: "block text-sm font-medium text-slate-700 mb-2" %>
      <%= form.email_field :email, 
          class: "block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-900 focus:ring focus:ring-slate-200 focus:ring-opacity-50",
          required: true %>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <%= form.label :first_name, "First Name", class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= form.text_field :first_name, 
            class: "block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-900 focus:ring focus:ring-slate-200 focus:ring-opacity-50" %>
      </div>

      <div>
        <%= form.label :last_name, "Last Name", class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= form.text_field :last_name, 
            class: "block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-900 focus:ring focus:ring-slate-200 focus:ring-opacity-50" %>
      </div>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <%= link_to "Cancel", admin_shopify_customers_path, 
        class: "text-slate-600 hover:text-slate-900 px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
    <%= form.submit class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors cursor-pointer" %>
  </div>
<% end %>

