<% content_for :title, "#{@organization.name} - Organizations - Admin" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="space-y-2">
      <div class="flex items-center space-x-3">
        <%= link_to admin_organizations_path, class: "text-slate-500 hover:text-slate-700" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        <% end %>
        <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
          <%= @organization.name %>
        </h1>
      </div>
      <p class="text-sm text-slate-600">
        UID: <code class="bg-slate-100 px-2 py-0.5 rounded"><%= @organization.uid %></code>
        &bull; Created <%= @organization.created_at.strftime("%B %d, %Y") %>
      </p>
    </div>
    
    <div class="flex space-x-2">
      <%= link_to edit_admin_organization_path(@organization), class: "bg-slate-100 text-slate-900 hover:bg-slate-200 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
        Edit Organization
      <% end %>
      <% if @users.empty? && @stores.empty? %>
        <%= button_to admin_organization_path(@organization), method: :delete,
            form: { onsubmit: "return confirm('Are you sure you want to delete this organization?')" },
            class: "bg-red-100 text-red-800 hover:bg-red-200 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
          Delete
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Users Section -->
  <div class="bg-white border border-slate-200 rounded-lg">
    <div class="p-4 border-b border-slate-200">
      <h2 class="text-lg font-semibold text-slate-900">Users (<%= @users.count %>)</h2>
    </div>
    <% if @users.any? %>
      <div class="divide-y divide-slate-200">
        <% @users.each do |user| %>
          <div class="p-4 flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-slate-900"><%= user.full_name %></p>
                <p class="text-sm text-slate-600"><%= user.email %></p>
              </div>
            </div>
            <%= link_to "View", admin_user_path(user), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-8 text-center text-slate-500">
        No users in this organization
      </div>
    <% end %>
  </div>

  <!-- Stores Section -->
  <div class="bg-white border border-slate-200 rounded-lg">
    <div class="p-4 border-b border-slate-200">
      <h2 class="text-lg font-semibold text-slate-900">Stores (<%= @stores.count %>)</h2>
    </div>
    <% if @stores.any? %>
      <div class="divide-y divide-slate-200">
        <% @stores.each do |store| %>
          <div class="p-4 flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-slate-900"><%= store.name %></p>
                <p class="text-sm text-slate-600">
                  <%= store.platform_display_name %> &bull; <%= store.display_identifier %>
                </p>
              </div>
            </div>
            <%= link_to "View", admin_store_path(store), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-8 text-center text-slate-500">
        No stores in this organization
      </div>
    <% end %>
  </div>
</div>
