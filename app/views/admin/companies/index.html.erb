<% content_for :title, "Companies - Framefox Connect Admin" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="space-y-2">
      <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
        Shopify Companies
      </h1>
      <p class="text-lg text-slate-600">
        Manage Shopify B2B company accounts.
      </p>
    </div>
    
    <%= link_to new_admin_company_path, class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
      Add New Company
    <% end %>
  </div>

  <!-- Companies List -->
  <div class="bg-white border border-slate-200 rounded-lg">
    <% if @companies.any? %>
      <div class="divide-y divide-slate-200">
        <% @companies.each do |company| %>
          <div class="p-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                </div>
                <div>
                  <div class="flex items-center space-x-2">
                    <h3 class="text-lg font-semibold text-slate-900"><%= company.company_name %></h3>
                    <span class="inline-flex items-center rounded-full bg-blue-100 px-2 py-0.5 text-xs font-medium text-blue-800">
                      <%= pluralize(company.shopify_customers.count, 'customer') %>
                    </span>
                  </div>
                  <p class="text-sm text-slate-600">
                    Company ID: <%= company.shopify_company_id.split('/').last %>
                  </p>
                  <p class="text-xs text-slate-500">
                    Location: <%= company.shopify_company_location_id.split('/').last %> •
                    Contact: <%= company.shopify_company_contact_id.split('/').last %> •
                    Created <%= company.created_at.strftime("%B %d, %Y") %>
                  </p>
                </div>
              </div>
              
              <div class="flex items-center space-x-2">
                <div class="flex space-x-2">
                  <%= link_to admin_company_path(company), class: "bg-slate-100 text-slate-700 hover:bg-slate-200 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
                    View
                  <% end %>
                  <%= link_to edit_admin_company_path(company), class: "hover:bg-slate-100 hover:text-slate-900 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
                    Edit
                  <% end %>
                  <%= button_to admin_company_path(company), method: :delete, form: { onsubmit: "return confirm('Are you sure you want to delete this company? This will not delete the associated customers.')" },
                      class: "bg-red-100 text-red-800 hover:bg-red-200 px-4 py-2 rounded-md text-sm font-medium transition-colors" do %>
                    Delete
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="w-16 h-16 bg-slate-100 rounded-lg flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-slate-900 mb-2">No companies yet</h3>
        <p class="text-sm text-slate-600 mb-4">Add your first B2B company to get started.</p>
        <%= link_to new_admin_company_path, class: "bg-slate-900 text-slate-50 hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors inline-flex items-center" do %>
          Add Your First Company
        <% end %>
      </div>
    <% end %>
  </div>
</div>

