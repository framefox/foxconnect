<div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-sm border border-slate-200 p-8">
  <%= form_with(model: [:admin, company]) do |form| %>
    <% if company.errors.any? %>
      <div class="mb-6 rounded-lg bg-red-50 border border-red-300 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <i class="fa-solid fa-circle-exclamation text-red-600"></i>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-semibold text-red-900">
              <%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-600">
              <ul role="list" class="list-disc pl-5 space-y-1">
                <% company.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <!-- Company Name -->
    <div class="mb-6">
      <%= form.label :company_name, "Company Name", class: "block text-sm font-semibold text-slate-900 mb-2" %>
      <%= form.text_field :company_name, 
          class: "block w-full px-4 py-3 bg-white border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-colors",
          placeholder: "e.g., Acme Corporation",
          required: true %>
    </div>
    <!-- Shopify Company ID -->
    <div class="mb-6">
      <%= form.label :shopify_company_id, "Shopify Company ID", class: "block text-sm font-semibold text-slate-900 mb-2" %>
      <%= form.text_field :shopify_company_id, 
          class: "block w-full px-4 py-3 bg-white border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-colors",
          placeholder: "13143834863",
          required: true %>
      <p class="mt-2 text-sm text-slate-500">
        Just the numeric ID (e.g., 13143834863). You can paste the full GID and we'll extract the number automatically.
      </p>
    </div>
    <!-- Shopify Company Location ID -->
    <div class="mb-6">
      <%= form.label :shopify_company_location_id, "Shopify Company Location ID", class: "block text-sm font-semibold text-slate-900 mb-2" %>
      <%= form.text_field :shopify_company_location_id, 
          class: "block w-full px-4 py-3 bg-white border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-colors",
          placeholder: "16870506735",
          required: true %>
      <p class="mt-2 text-sm text-slate-500">
        Just the numeric ID (e.g., 16870506735). You can paste the full GID and we'll extract the number automatically.
      </p>
    </div>
    <!-- Shopify Company Contact ID -->
    <div class="mb-6">
      <%= form.label :shopify_company_contact_id, "Shopify Company Contact ID", class: "block text-sm font-semibold text-slate-900 mb-2" %>
      <%= form.text_field :shopify_company_contact_id, 
          class: "block w-full px-4 py-3 bg-white border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-colors",
          placeholder: "10501259503",
          required: true %>
      <p class="mt-2 text-sm text-slate-500">
        Just the numeric ID (e.g., 10501259503). You can paste the full GID and we'll extract the number automatically.
      </p>
    </div>
    <!-- Action Buttons -->
    <div class="flex items-center gap-4 mt-8">
      <%= form.submit class: "px-6 py-3 bg-slate-900 text-white font-medium rounded-lg hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition-colors cursor-pointer" %>
      <%= link_to "Cancel", admin_companies_path, 
          class: "px-6 py-3 bg-white text-slate-700 font-medium border border-slate-300 rounded-lg hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition-colors" %>
    </div>
  <% end %>
</div>
