<% content_for :title, "Edit Company - #{@company.company_name}" %>
<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="space-y-2">
      <div class="flex items-center space-x-2">
        <%= link_to admin_companies_path, class: "text-slate-600 hover:text-slate-900" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
        <% end %>
        <h1 class="scroll-m-20 text-3xl font-semibold tracking-tight text-slate-900">
          Edit Company
        </h1>
      </div>
      <p class="text-lg text-slate-600">
        Update company information for <%= @company.company_name %>
      </p>
    </div>
  </div>
  <%= render "form", company: @company %>
</div>
