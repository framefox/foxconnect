<% content_for :title, "Admin Login - Framefox Connect" %>
<div class="h-screen w-screen flex overflow-hidden m-0 p-0">
  <!-- Left Side - Login Form -->
  <div class="w-full lg:w-1/2 flex items-center justify-center bg-slate-50 px-4 sm:px-6 lg:px-8 py-12 overflow-y-auto m-0">
    <div class="max-w-md w-full space-y-8">
      <!-- Header -->
      <div class="text-center">
        <h1 class="text-3xl font-bold text-slate-900 mb-2">
          <%= image_tag "logo-connect-sm.png", alt: "Framefox Connect", class: "h-7 mx-auto" %>
        </h1>
        <p class="text-sm text-slate-600">
          Sign in to access 
        </p>
      </div>
      <!-- Login Form -->
      <div class="bg-white border border-slate-200 rounded-lg p-8 shadow-sm">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <!-- Error Messages -->
          <% if flash[:alert] %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <p class="text-sm text-red-800"><%= flash[:alert] %></p>
            </div>
          <% end %>
          <!-- Email Field -->
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-slate-700 mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "admin@example.com" %>
          </div>
          <!-- Password Field -->
          <div>
            <%= f.label :password, class: "block text-sm font-medium text-slate-700 mb-2" %>
            <%= f.password_field :password, autocomplete: "current-password",
                class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "Enter your password" %>
          </div>
          <!-- Remember Me -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-slate-300 rounded" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-slate-700" %>
            </div>
          <% end %>
          <!-- Submit Button -->
          <div>
            <%= f.submit "Sign In", class: "w-full bg-slate-900 text-white hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors cursor-pointer" %>
          </div>
          <!-- Additional Links -->
          <div class="text-center text-sm">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-600 hover:text-blue-800" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <!-- Right Side - Background Image -->
  <div class="hidden lg:block lg:w-1/2 h-full bg-cover bg-center bg-no-repeat" style="background-image: url(<%= asset_path('banner.jpg') %>);">
  </div>
</div>
