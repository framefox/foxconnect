<% content_for :title, "Reset Password - Framefox Connect Admin" %>
<div class="min-h-screen flex items-center justify-center bg-slate-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <h1 class="text-3xl font-bold text-slate-900 mb-2">
        Reset Password
      </h1>
      <p class="text-sm text-slate-600">
        Enter your email to receive reset instructions
      </p>
    </div>
    <!-- Reset Form -->
    <div class="bg-white border border-slate-200 rounded-lg p-8 shadow-sm">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
        <!-- Error Messages -->
        <% if resource.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <h3 class="text-sm font-medium text-red-800 mb-2">
              <%= pluralize(resource.errors.count, "error") %> occurred:
            </h3>
            <ul class="list-disc list-inside text-sm text-red-700">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <!-- Email Field -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "admin@example.com" %>
        </div>
        <!-- Submit Button -->
        <div>
          <%= f.submit "Send Reset Instructions", class: "w-full bg-slate-900 text-white hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors cursor-pointer" %>
        </div>
        <!-- Back to Login -->
        <div class="text-center text-sm">
          <%= link_to "Back to login", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-800" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
