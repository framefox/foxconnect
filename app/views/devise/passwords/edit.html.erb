<% content_for :title, "Change Password - Framefox Connect Admin" %>
<div class="min-h-screen flex items-center justify-center bg-slate-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <h1 class="text-3xl font-bold text-slate-900 mb-2">
        Change Password
      </h1>
      <p class="text-sm text-slate-600">
        Enter your new password below
      </p>
    </div>
    <!-- Change Password Form -->
    <div class="bg-white border border-slate-200 rounded-lg p-8 shadow-sm">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <!-- Error Messages -->
        <% if resource.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <h3 class="text-sm font-medium text-red-800 mb-2">
              <%= pluralize(resource.errors.count, "error") %> occurred:
            </h3>
            <ul class="list-disc list-inside text-sm text-red-700">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <!-- New Password Field -->
        <div>
          <%= f.label :password, "New password", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-slate-500 mb-2">(<%= @minimum_password_length %> characters minimum)</p>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
              class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Enter new password" %>
        </div>
        <!-- Confirm Password Field -->
        <div>
          <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Confirm new password" %>
        </div>
        <!-- Submit Button -->
        <div>
          <%= f.submit "Change Password", class: "w-full bg-slate-900 text-white hover:bg-slate-800 px-4 py-2 rounded-md text-sm font-medium transition-colors cursor-pointer" %>
        </div>
        <!-- Back to Login -->
        <div class="text-center text-sm">
          <%= link_to "Back to login", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-800" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
